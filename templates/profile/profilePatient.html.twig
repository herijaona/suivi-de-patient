{% extends 'profile/include/basePatient.html.twig' %} {% block body %}


<div class="d-flex w-100">
    <h2 class="profile-h2">Mon profile</h2>
    <div class="text-right w-50">
        <button type="submit " class="btn btn-info button-login btn-edit mb-3">
            <i class="fas fa-pencil-alt mr-2"></i>
            <span>Modifier</span>
        </button>
    </div>
</div>
<div>
    <div>
        {{ form_start(registrationForm) }}
        <div class="body-page register edit-register">
            <div class="container text-center body-content">
                <form role="form" class="form-horizontal">
                    <div class="row form-group">
                        <div class="col-lg-6">
                            <label for="">Nom</label> {{ form_widget(registrationForm.lastname, {'attr': {'class': 'form-control form-show', 'placeholder': 'Nom', 'value':values.user.lastName}}) }}
                            <input type="text" class="form-control form-edit" placeholder="{{ values.user.lastName }}">
                        </div>
                        <div class="col-lg-6">
                            <label for="">Prenom</label> {{ form_widget(registrationForm.firstname, {'attr': {'class': 'form-control form-show', 'value': values.user.firstName}}) }}
                            <input type="text" class="form-control form-edit" placeholder="{{ values.user.firstname }}">
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-lg-6">
                            <label for="">Date de naissance</label> {{ form_widget(registrationForm.date_naissance, {'attr': {'class': 'form-control form-show', 'value': values.dateOnBorn|localizeddate('none', 'none', 'fr', null, 'd MMMM Y')}}) }}
                            <input type="text" class="form-control form-edit" placeholder="{{ values.dateOnBorn|localizeddate('none', 'none', 'fr', null, 'd MMMM Y') }}">
                        </div>
                        <div class="col-lg-6">
                            <label for="">Lieu de naissance</label> {{ form_widget(registrationForm.lieu_naissance, {'attr': {'class': 'form-control', 'placeholder': 'Lieu de Naissance'}}) }}
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-lg-6">
                            <label for="">Telephone</label> {{ form_widget(registrationForm.phone, {'attr': {'class': 'form-control form-show', 'value': values.phone}}) }}
                            <input type="text" class="form-control form-edit" placeholder="{{ values.phone }}">
                        </div>
                        <div class="col-lg-6">
                            <label for="">Type de patient</label> {{ form_widget(registrationForm.type_patient, {'attr': {'class': 'form-control', 'placeholder': 'Type patient'}}) }}
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-lg-6">
                            <label for="">Adresse</label> {{ form_widget(registrationForm.address, {'attr': {'class': 'form-control', 'placeholder': 'Adresse'}}) }}
                        </div>
                        <div class="col-lg-6">
                            <label for="">Sexe</label> {{ form_widget(registrationForm.sexe, {'attr': {'class': 'form-control', 'placeholder': 'Sexe'}}) }}
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-lg-6">
                            <label for="">Email</label> {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control form-show', 'value': values.user.email}}) }}
                            <input type="text" class="form-control form-edit" placeholder="{{ values.user.email }}">
                        </div>
                        <div class="col-lg-6">
                            <label for="">Mot de passe</label> {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-lg-6">
                            <label for="">Username</label> {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control form-show', 'placeholder': 'Votre identifiant'}}) }}
                            <input type="text" class="form-control form-edit" placeholder="{{ values.user.username }}">
                        </div>
                        <div class="col-md-6">
                            <label for="">Nome de pere</label> {{ form_widget(registrationForm.namedaddy, {'attr': {'class': 'form-control mb-3', 'placeholder': 'nom de père'}}) }}
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-6">
                            <label for="">Nome de mere</label> {{ form_widget(registrationForm.namemonther, {'attr': {'class': 'form-control mb-3', 'placeholder': 'nom de mère'}}) }}
                        </div>
                    </div>
                    <button type="submit " class="btn btn-info button-login mb-3 button-edit button-edit-class">
                        Sauvegarder
                    </button>
            </div>
        </div>
        {{ form_end(registrationForm) }}
    </div>
</div>

{% endblock %} {% block javascripts %}
<script src="{{ asset('assets/js/jquery-3.1.1.min.js') }}"></script>
<script>
    $('.form-show').css('display', 'none');
    var i = 1;
    $(".btn-edit").click(function() {
        i++;
        if (i % 2 == 0) {
            $('.button-edit-class').removeClass('button-edit-class');
            $('.form-edit').css('display', 'none');
            $('.form-show').css('display', 'block');
            $(this).addClass('button-cancel');
            $(this).children('span').html('<span>Annuler</span>');
            $(this).children('i').remove();
        } else {
            $('.button-edit').addClass('button-edit-class');
            $('.form-edit').css('display', 'block');
            $('.form-show').css('display', 'none');
            $(this).removeClass('button-cancel');
            $(this).children('span').html('<span>Modifier</span>');
            $(this).prepend('<i class="fas fa-pencil-alt mr-2"></i>');
        }
    });
</script>

{% endblock %}
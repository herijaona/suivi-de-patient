{% extends 'include/base.html.twig' %}
{%  block title %}
    {% trans %}Appointment {% endtrans %}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row head-table col-md-12">
        <div class="grid-title-table col-md-9 mt-4">
            <h4 class="h4-content"> {{ 'My Appointments'|trans }}</h4>
        </div>
    </div>
    <div class="row-table table-content">
        <table class="table table-striped" id="example1">
            <thead>
            <tr>
                <th>Type</th>
                <th>{% trans %}Object{% endtrans %} </th>
                <th>Praticien</th>
                <th>{% trans %}Center Health{% endtrans %}</th>
                <th>Date</th>
                <th>{% trans %}Status{% endtrans %}</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for rdv in consultation  %}
                <tr>
                    <td>Consultation</td>
                    <td>{{ rdv.objetConsultation }}</td>
                    <td>
                        {{ rdv.firstName }}
                        {{ rdv.lastName }}
                    </td>
                    <td>{{ rdv.centreName }}</td>
                    <td>
                        {% if rdv.dateRdv != null %}
                        {{ rdv.dateRdv|localizeddate('none', 'none', app.request.locale, null, 'dd MMMM yyyy') }}
                        {% endif %}

                    </td>
                    <td>
                        {% if rdv.statusConsultation == 0  %}
                            <p class="badge badge-info  textf">{% trans %}waiting{% endtrans %}</p>
                        {% elseif rdv.statusConsultation == 2 %}
                            <p class="badge badge-danger  textf">{% trans %}Canceled{% endtrans %}</p>
                        {% elseif rdv.statusConsultation == 1 and rdv.etat == 0 %}
                            <p class="badge badge-primary  textf">{% trans %}Scheduled{% endtrans %}</p>
                        {% elseif rdv.statusConsultation == 1 and rdv.etat == 1 %}
                            <p class="badge badge-success textf">{% trans %}Realized{% endtrans %}</p>
                        {% endif %}
                    </td>
                    <td>
                        {% if rdv.statusConsultation == 0 or rdv.statusConsultation == 1 and rdv.etat == 0 %}
                       <span class="badge badge-danger badge-style modif" data-type="consultation" data-id="{{ rdv.id }}" >{{ 'Cancel'|trans }}</span>
                       {% elseif rdv.statusConsultation == 2 %}
                           <p class="badge badge-danger  textf" >{{ 'Cancel'|trans }}</p>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            {% for rdv in intervention  %}
                <tr>
                    <td>Intervention</td>
                    <td>{{ rdv.objetConsultation }}</td>
                    <td>
                        {{ rdv.firstName }}
                        {{ rdv.lastName }}
                    </td>
                    <td>{{ rdv.centreName }}</td>
                    <td>
                        {% if rdv.dateConsultation != null %}
                        {{ rdv.dateConsultation|localizeddate('none', 'none', app.request.locale, null, 'dd MMMM yyyy') }}
                        {% endif %}
                    </td>
                    <td>
                        {% if rdv.status == 0  %}
                            <p class="badge badge-info  textf">{% trans %}waiting{% endtrans %}</p>
                        {% elseif rdv.status == 2 %}
                            <p class="badge badge-danger  textf">{% trans %}Canceled{% endtrans %}</p>
                        {% elseif rdv.status == 1 and rdv.etat == 0 %}
                            <p class="badge badge-primary  textf">{% trans %}Scheduled{% endtrans %}</p>
                        {% elseif rdv.status == 1 and rdv.etat == 1 %}
                            <p class="badge badge-success textf">{% trans %}Realized{% endtrans %}</p>
                        {% endif %}
                    </td>
                    <td>
                        {% if rdv.status == 0 or rdv.status == 1 and rdv.etat == 0 %}
                            <span class="badge badge-danger badge-style modif" data-type="intervention" data-id="{{ rdv.id }}" >{{ 'Cancel'|trans }}</span>

                        {% endif %}
                    </td>
                </tr>
            {% endfor %}


            </tbody>
        </table>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{asset('vendor/datatables/jquery.dataTables.js')}}"></script>
    <script src="{{asset('vendor/datatables-bs4/js/dataTables.bootstrap4.js')}}"></script>
    <script>
        $(document).ready(function () {
            $('#example1').DataTable();
            $('.date_rdv').datepicker({
                format: 'dd/mm/yyyy',
                autoclose: true,
            });
        });
        $('.modif').on('click', function (e) {
            $(".loadBody").css("display", "block");
            e.preventDefault();
            var id = $(this).data('id');
            var type = $(this).data('type');

            $.ajax({
                url: "{{ path('change') }}",
                type: 'post',
                data: {
                    id: id,
                    type: type
                },
                dataType: "json",
                success: (data) =>{
                    $(".loadBody").css("display", "none");
                    location.reload();
                },
                error: (e) => {
                    $(".loadBody").css("display", "none");
                    $(".chargementError").css("display", "block");
                }
            }).done(() => {
                $(".loadBody").css("display", "none");
            });

        });

    </script>
{% endblock %}
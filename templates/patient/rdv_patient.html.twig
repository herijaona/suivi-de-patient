{% extends 'include/base.html.twig' %}
{%  block title %}
    Rendez-Vous
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('vendor/datatables-bs4/css/dataTables.bootstrap4.css')}}">
{% endblock %}

{% block body %}
    <div class="row head-table col-md-12">
        <div class="grid-title-table col-md-9 mt-4">
            <h4 class="h4-content">rendez-vous</h4>
        </div>
        <div class="grid-edit-btn col-md-3 mt-3">
            <button class="btn btn-danger" data-toggle="modal" data-target="#orangeModalSubscription">+ Creer rendez-vous</button>
        </div>
    </div>
    <div class="row-table table-content">
        <table class="table table-striped" id="example1">
            <thead>
            <tr>
                <th>Date rdv</th>
                <th>Type</th>
                <th>Objet de consultation </th>
                <th>Docteur</th>
                <th>Vaccin</th>
                <th>Status</th>

            </tr>
            </thead>
            <tbody>
            {% for rdv in consultation  %}
                <tr>
                    <td>
                        {{ rdv.dateRdv |localizeddate('none', 'none', app.request.locale, null, 'dd MMMM yyyy') }}
                    </td>
                    <td>Consultation</td>
                    <td>
                        {{ rdv.objetConsultation }}
                    </td>
                    <td>
                        {{ rdv.firstName }}
                        {{ rdv.lastName }}
                    </td>
                    <td></td>
                    <td>
                        {{ rdv.statusConsultation }}
                    </td>

                </tr>
            {% endfor %}

            {% for vac in vaccination  %}
                <tr>
                    <td>
                        {{ vac.datePrise |localizeddate('none', 'none', app.request.locale, null, 'dd MMMM yyyy') }}
                        {#{ user.createdAt|localizeddate('none', 'none', 'fr', null, 'd MMMM Y') }}#}
                    </td>
                    <td>Vaccination</td>
                    <td>

                    </td>
                    <td>
                        {{ vac.firstName }} {{ vac.lastName }} <br>
                    </td>
                    <td>{{ vac.vaccinName }}</td>
                    <td>
                        {{ vac. statusVaccin }}
                    </td>

                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>
    <div class="modal fade" id="orangeModalSubscription" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog modal-notify modal-primary" role="document">
            <!--Content-->

                <div class="modal-content">
                    <!--Header-->
                    <div class="modal-header text-center">
                        <h4 class="modal-title white-text w-100 font-weight-bold py-2">Rendez-Vous</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true" class="white-text">&times;</span>
                        </button>
                    </div>
                    <form action="{{ path('register_rdv') }}" method="post">
                    <!--Body-->

                    <div class="modal-body">
                        <div class="md-form mb-5">
                            <label class="active">Docteur</label>
                            <select class="mdb-select md-form" name="doctor" editable="true" searchable="Rechercher le nom du docteur..." required>
                                <option value="" disabled selected>Choisissez votre médecin</option>
                                {% for doc in Doctors %}
                                    <option  value="{{ doc.id }}">{{doc.firstName}} {{doc.lastName}}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="md-form mb-5">
                            <input type="datetime-local" id="date_rdv" name="date" class="form-control date_rdv" required>
                            <label class="active" for="date_rdv">Date rendez-vous</label>
                        </div>
                        <div class="md-form">
                            <textarea id="form103" name="description" class="md-textarea form-control" rows="2" ></textarea>
                            <label for="form103" class="">Déscription</label>
                        </div>
                        <div class="md-form mb-5">
                            <label class="active">Type de rendez-vous</label>
                            <select id="mdb-select md-form" name="type" required onchange="showselect('hidden_select', this)">
                                <option value="consultation">CONSULTATION</option>
                                <option value="vaccination" >VACCINATION</option>
                            </select>
                        </div>
                        <div class="md-form mb-5">
                            <select class="mdb-select md-form" name="vaccin" editable="true" searchable="Rechercher vaccin..." >
                                <option value="null" disable>Vaccin</option>
                                {% for vac in Vaccin %}
                                    <option  value="{{ vac.id }}"> {{vac.vaccinName}} </option>>
                                {% endfor %}
                            </select>

                        </div>
                    </div>

                    <!--Footer-->
                    <div class="modal-footer justify-content-center">
                        <button type="submit" class="btn btn-outline-primary waves-effect">Enregistrer <i class="fas fa-paper-plane-o ml-1"></i></button>
                    </div>

                    </form>
                </div>
            <!--/.Content-->
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <!-- DataTables -->
    <script src="{{asset('vendor/datatables/jquery.dataTables.js')}}"></script>
    <script src="{{asset('vendor/datatables-bs4/js/dataTables.bootstrap4.js')}}"></script>
    <script>
        $(document).ready(function () {
            $("#example1").DataTable({
                language: {
                    url: "{{ asset('vendor/datatables/lang.json') }}"
                }
            });
            $('.mdb-select').materialSelect();

            $('.date_rdv').datepicker({
                format: 'dd/mm/yyyy',
                autoclose: true,
            });
        })

    </script>


{% endblock %}
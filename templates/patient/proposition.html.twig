{% extends 'include/base.html.twig' %}
{%  block title %}
    Proposition Rendez-vous
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row head-table col-md-12">
        <div class="grid-title-table col-md-9 mt-4">
            <h4 class="h4-content">Proposition Rendez-vous</h4>
        </div>
    </div>
    <div class="row-table table-content">
        <table class="table table-striped" id="example1">
            <thead>
            <tr>
                <th>Date Proposition rdv</th>
                <th>Description </th>
                <th>Docteur</th>
                <th>Nombre patient attendre</th>
                <th></th>

            </tr>
            </thead>
            <tbody>
            {% for propos in proposition  %}
                <tr>
                    <td class="text-left">
                        {{ propos.dateProposition |format_datetime('full', 'short', locale=app.request.locale)}}
                    </td>
                    <td>
                        {{ propos.descriptionProposition }}
                    </td>
                    <td>
                        {{ propos.firstName }}
                        {{ propos.lastName }}
                    </td>
                    <td> {{ propos.PersonneAttendre }}</td>
                    <td>
                        <span class="badge badge-success badge-style modif-etat" data-description = "{{ propos.descriptionProposition }}" data-praticien = "{{ propos.praticien }}" data-id ="{{ propos.id }}" data-date="{{ propos.dateProposition | date }}" data-personne = "{{ propos.PersonneAttendre }}" >Accepter</span>
                    </td>

                </tr>
            {% endfor %}
            </tbody> date
        </table>
    </div>

{% endblock %}

{% block javascripts %}
    <!-- DataTables -->
    <script>
        $('.modif-etat').on('click', function (e) {
            e.preventDefault();
            var id = $(this).data('id');
            var praticien = $(this).data('praticien');
            var date = $(this).data('date');
            var description = $(this).data('description');
            var personne = $(this).data('personne');
            $.ajax({
                url: "{{ path('proposition') }}",
                type: 'post',
                data: {
                    id: id,
                    praticien: praticien,
                    date: date,
                    description: description,
                    personne: personne
                },
                dataType: "json",
                success: (data) =>{

                     $(".loadBody").css("display", "none");
                    location.reload();
                },
                error: (e) => {
                    $(".loadBody").css("display", "none");
                    $(".chargementError").css("display", "block");
                }
            }).done(() => {
                $(".loadBody").css("display", "none");
            });

        })
        $(document).ready(function () {
            $("#example1").DataTable({
                language: {
                    url: "{{ asset('vendor/datatables/lang.json') }}"
                }
            });
            $('.mdb-select').materialSelect();

            $('.date_rdv').datepicker({
                format: 'dd/mm/yyyy',
                autoclose: true,
            });
        })

    </script>
{% endblock %}
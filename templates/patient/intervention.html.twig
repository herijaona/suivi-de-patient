{% extends 'include/base.html.twig' %}
{%  block title %}
    Intervention
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row head-table col-md-12">
        <div class="grid-title-table col-md-9 mt-4">
            <h4 class="h4-content">Intervention </h4>
        </div>

    </div>
    <div class="row-table table-content">
        <table class="table table-striped" id="example1">
            <thead>
            <tr>
                <th>{% trans %}Intervention date{% endtrans %}</th>
                <th>Type</th>
                <th>{% trans %}Object of consultation{% endtrans %}</th>
                <th>Patient</th>
                <th>{% trans %}State Intervention{% endtrans %}</th>
            </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{asset('vendor/datatables/jquery.dataTables.js')}}"></script>
    <script src="{{asset('vendor/datatables-bs4/js/dataTables.bootstrap4.js')}}"></script>
    <script>
        $('.modif-etat').on('click', function (e) {
            e.preventDefault();
            var id = $(this).data('id');
            var type = $(this).data('type');
            var etat = $(this).data('etat');
            var proposition = $(this).data('proposition');
            var consultation = $(this).data('consultation');
            var vaccination = $(this).data('vaccination');
            $.ajax({
                url: "{{ path('update_etat') }}",
                type: 'post',

                data: {
                    id: id,
                    type: type,
                    etat: etat,
                    proposition: proposition,
                    consultation: consultation,
                    vaccination: vaccination,
                },
                dataType: "json",
                cache: false,
                success: (data) =>{
                    $(".loadBody").css("display", "none");
                    location.reload();
                },
                error: (e) => {
                    $(".loadBody").css("display", "none");
                    $(".chargementError").css("display", "block");
                }
            }).done(() => {
                $(".loadBody").css("display", "none");
            });
        });
        $(document).ready(function() {
            $('#example1').DataTable();
        });

    </script>
{% endblock %}
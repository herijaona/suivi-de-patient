<!--Header-->
<style>
    .md-form.row-check {
        flex-direction: row;
        display: flex;
    }
</style>
<div class="modal-header text-center">
    {% if new == true %}
        <h4 class="modal-title white-text w-100 font-weight-bold py-2">Nouveau Rendez-Vous</h4>
    {% else %}
        <h4 class="modal-title white-text w-100 font-weight-bold py-2">Modification Rendez-Vous</h4>
    {% endif %}
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true" class="white-text">&times;</span>
    </button>
</div>
<!--Content-->
{{ form_start(form, {'attr': {'action': path('register_rdv') }}) }}
<!--Body-->
<div class="modal-body">
    <div class="md-form">
        <label class="active" for="form1">Praticiens </label>
        {{ form_widget(form.praticiens, {'attr': { 'class': 'form-control chosen-select' }}) }}
    </div>
    <div class="md-form">
        <label class="active" for="form1">Type de Rendez-Vous </label>
        {{ form_widget(form.typeRdv, {'attr': { 'class': 'form-control chosen-select' }}) }}
    </div>
    <div class="md-form description_hidden">
        <label class="active" for="form1">Description </label>
        {{ form_widget(form.description, {'attr': { 'class': 'form-control' }}) }}
    </div>
    <div class="md-form vaccin_hidden">
        <label class="active" for="form1">Vaccin </label>
        {{ form_widget(form.vaccin, {'attr': { 'class': 'form-control chosen-select' }}) }}
    </div>
    <div class="md-form">
        <label class="active" for="form1">Date Rendez-Vous </label>
        {{ form_widget(form.dateRdv, {'attr': { 'class': 'form-control date_rdv' }}) }}
    </div>
    <div class="md-form">
        <label class="active" for="form1">Heure Rendez-Vous </label>
        {{ form_widget(form.heureRdv, {'attr': { 'class': 'form-control' }}) }}
    </div>

</div>
<div class="modal-footer justify-content-center">
    <button type="button" class="btn btn-outline-danger waves-effect" data-dismiss="modal" aria-label="Close"><i class="fas fa-remove ml-1"></i> Annuler </button>
    <button type="submit" class="btn btn-outline-primary waves-effect submit_new_center_health"><i class="fas fa-save ml-1"></i> Enregistrer </button>
</div>

{{ form_end(form) }}

<script type="text/javascript">
    $(document).ready(function () {
        $('.vaccin_hidden').css("display", "none");
        $('.description_hidden').css("display", "none");

        $('.chosen-select').chosen({width: "100%"});

        $('.date_rdv').datepicker({
            format: 'dd/mm/yyyy',
            autoclose: true,
            todayHighlight:'TRUE',
            startDate: '-0d',
        })

        if($('#rdv_typeRdv').val() == 'consultation'){
            $('.vaccin_hidden').css("display", "none");
            $('.description_hidden').css("display", "block");
        }
        if($('#rdv_typeRdv').val() == 'vaccination'){
            $('.vaccin_hidden').css("display", "block");
            $('.description_hidden').css("display", "none");
        }

        $('#rdv_typeRdv').on('change', function (e) {
            if($(this).val() == 'consultation'){
                $('.vaccin_hidden').css("display", "none");
                $('.description_hidden').css("display", "block");
            }
            else if($(this).val() == 'vaccination'){
                $('.vaccin_hidden').css("display", "block");
                $('.description_hidden').css("display", "none");
            }
        });

        $('.chosen-select').trigger('chosen:updated');
    });
</script>

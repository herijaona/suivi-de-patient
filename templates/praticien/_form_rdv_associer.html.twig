{% extends 'include/base.html.twig'%}

{%  block title %}
{% endblock %}

{% block stylesheets %}
    <style>
        .md-form.row-check {
            flex-direction: row;
            display: flex;
        }
    </style>
{% endblock %}
{% block body %}
    <div class="modal-header text-center">
            <h4 class="modal-title white-text w-100 font-weight-bold py-2">{% trans %}MAKE AN APPOINTMENT {% endtrans %}</h4>
    </div>
    <!--Content-->
    {{ form_start(form, {'attr': {'action': path('register_rdv_associer') }}) }}
    <!--Body-->
    <div class="modal-body">
        <div class="md-form">
            <label class="active" for="form1">Patient </label>
            {{ form_widget(form.patient, {'attr': { 'class': 'form-control chosen-select' }}) }}
        </div>
        <div class="md-form">
            <label class="active" for="form1">Type </label>
            {{ form_widget(form.typeRdv, {'attr': { 'class': 'form-control chosen-select' }}) }}
        </div>
        <div class="md-form description">
            <label class="active" for="form1" >{% trans %}Object{% endtrans %}</label>
            {{ form_widget(form.objet, {'attr': { 'class': 'form-control' }}) }}
        </div>
        <div class="md-form">
            <label class="active" for="form1">{% trans %}Date Taken{% endtrans %}</label>
            {{ form_widget(form.dateRdv, {'attr': { 'class': 'form-control date_rdv' }}) }}
        </div>
        <div class="md-form">
            <label class="active" for="form1">{% trans %}Time Taken{% endtrans %} </label>
            {{ form_widget(form.heureRdv, {'attr': { 'class': 'form-control' }}) }}
        </div>

    </div>
    <div class="modal-footer justify-content-center">
        <button type="button" class="btn btn-outline-danger waves-effect" data-dismiss="modal" aria-label="Close"><i class="fas fa-remove ml-1"></i> {% trans %}Cancel{% endtrans %} </button>
        <button type="submit" class="btn btn-outline-primary waves-effect submit_new_center_health"><i class="fas fa-save ml-1"></i>{% trans %}Save{% endtrans %}</button>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.chosen-select').chosen({width: "100%"});
            $('.date_rdv').datepicker({
                format: 'dd/mm/yyyy',
                autoclose: true,
                todayHighlight:'TRUE',
                startDate: '-0d',
            });
            $('#rdv_associe_heureRdv').clockpicker({
                donetext: "valider",
                autoclose: true,
            });
            $('#rdv_associe_heureRdv').on('change', function () {
                let receivedVal = $(this).val();
                $(this).val(receivedVal);
            });



            $('.chosen-select').trigger('chosen:updated');
        });
    </script>


    {{ form_end(form) }}
{% endblock %}



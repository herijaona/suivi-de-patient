{% extends 'include/base.html.twig' %}

{% block title %}{% trans %}Dashboard{% endtrans %}{% endblock %}

{% block body %}
<h4 class="title-dash">{% trans %}Dashboard{% endtrans %}</h4>

<div class="row admin">
    <div class="col-6 col-md-3">
        <div class="card-admin">
            <i class="fa fa-user"></i>
            <div class="in-card" >
                <h5>
                    Patient
                </h5>
                <h3>
                    {{ nbPatient }}
                </h3>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card-admin" >
            <img src="/assets/images/vaccination.jpg" style="width: 34px;height: 39px;margin-top: 16px;"/>
            <div class="in-card">
                <h5 style="margin-left: 18px;">
                	Vaccination
                </h5>
                <h3 style="margin-left: 19px;">
                    {{ nbRealizedVacc }}
                </h3>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card-admin">
            <img src="/assets/images/consultation.jpg" style="width: 34px;height: 39px;margin-top: 16px;"/>
            <div class="in-card">
                <h5 style="margin-left: 18px;">
                    Consultation
                </h5>
                <h3 style="margin-left: 19px;">
                    {{ nbConsultation }}
                </h3>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card-admin">
            <img src="/assets/images/consultation.jpg" style="width: 34px;height: 39px;margin-top: 16px;"/>
            <div class="in-card">
                <h5 style="margin-left: 18px;">
                	{% trans %}
                        Pending activity
                	{% endtrans %}
                </h5>
                <h3 style="margin-left: 19px;">
                   {{ unrealized }}
                </h3>
            </div>
        </div>
    </div>

</div>
   <div class="row mt-2">
    <div class="col-12 col-md-6" style="background-color:white;text-align: center; margin-top: 24px;  border-radius: 12px; ">
        <p style="margin-top: 8px">{% trans %}List of pending activities{% endtrans %}</p>
        <h4>Vaccination : {{ vaccination }}</h4>
        <h4>Intervention : {{ intervention }}</h4>
        <h4>{% trans %}Appointment{% endtrans%} : {{ rdv }}</h4>

    </div>
       <div class="col-12 col-md-6">
           <div id="chartPatient" style="height: 300px; max-width: 920px;margin-top: 23px;  border-radius: 12px;"></div>
       </div>

   </div>
    <div class="row mt-2">
        <div class="col-12 col-md-6">
            <div id="chartContainerAgeRange"  style="height: 400px; width: 600px; margin-top: 23px;  border-radius: 12px;"></div>
        </div>

        <div class="col-12 col-md-6">
            <div id="chartVaccinStat" style="margin-top: 23px"  ></div>
        </div>

    </div>







{% endblock %} {% block javascripts %}
<!-- DataTables -->
{{ parent() }}
<script src="{{asset('vendor/datatables/jquery.dataTables.js')}}"></script>
<script src="{{asset('vendor/datatables-bs4/js/dataTables.bootstrap4.js')}}"></script>
<script>
    $(document).ready(function() {
        $('#patient').DataTable();
    });
</script>
{% endblock %}
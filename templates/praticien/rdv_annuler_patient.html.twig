{% extends 'include/base.html.twig' %}
{%  block title %}
    Rendez-Vous
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row head-table col-md-12">
        <div class="grid-title-table col-md-9 mt-4">
            <h4 class="h4-content">rendez-vous annuler</h4>
        </div>

    </div>
    <div class="row-table table-content">
        <table class="table table-striped" id="example1">
            <thead>
            <tr>
                <th>Date rdv</th>
                <th>Type</th>
                <th>Objet de consultation </th>
                <th>Patient</th>
                <th>Vaccin</th>
                <th>Status</th>
            </tr>
            </thead>
            <tbody>
            {% for rdv in consultation  %}
                <tr>
                    <td>
                        {{ rdv.dateRdv |format_datetime('full', 'short', locale=app.request.locale) }}
                    </td>
                    <td>Consultation</td>
                    <td>
                        {{ rdv.objetConsultation }}
                    </td>
                    <td>
                        {{ rdv.firstName }}
                        {{ rdv.lastName }}
                    </td>
                    <td></td>
                    <td>
                        {% if rdv.statusConsultation == 1 %}
                            <span class="badge badge-success badge-style modif-status"> activé </span>
                        {% elseif rdv.statusConsultation == 0 %}
                            <span class="badge badge-warning badge-style modif-status">En attente</span>
                        {% elseif rdv.statusConsultation == 2 %}
                            <span class="badge badge-danger badge-style modif-status">Réjeter</span>
                        {% endif %}
                    </td>

                </tr>
            {% endfor %}

            {% for vac in vaccination  %}
                <tr>
                    <td>
                        {{ vac.datePrise |format_datetime('full', 'short', locale=app.request.locale)}}
                        {#{ user.createdAt|localizeddate('none', 'none', 'fr', null, 'd MMMM Y') }}#}
                    </td>
                    <td>Vaccination</td>
                    <td>

                    </td>
                    <td>
                        {{ vac.firstName }} {{ vac.lastName }} <br>
                    </td>
                    <td>{{ vac.vaccinName }}</td>
                    <td>
                        {% if vac.statusVaccin == 1 %}
                            <span class="badge badge-success badge-style modif-status"> activé </span>
                        {% elseif vac.statusVaccin == 0 %}
                            <span class="badge badge-warning badge-style modif-status">En attente</span>
                        {% elseif vac.statusVaccin == 2 %}
                            <span class="badge badge-danger badge-style modif-status">Réjeter</span>
                        {% endif %}
                    </td>

                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>


{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            $("#example1").DataTable({
                language: {
                    url: "{{ asset('vendor/datatables/lang.json') }}"
                }
            });
            $('.mdb-select').materialSelect();

            $('.date_rdv').datepicker({
                format: 'dd/mm/yyyy',
                autoclose: true,
            });
        })

    </script>


{% endblock %}
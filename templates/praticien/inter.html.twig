{% extends 'include/base.html.twig' %}

{% block stylesheets %}

{% endblock %}

{% block body %}
    <div class="row head-table col-md-12">

    </div>
    <div class="row-table table-content">
        <table class="table table-striped" id="example1">
            <thead>
            <tr>
                <th>Patient</th>
                <th style="width: 239px;">{% trans %}Vaccine Name{% endtrans %}</th>
                <th style="width: 86.8px;">{% trans %}Date Taken{% endtrans %}</th>
                <th style="width: 153.6px;">Identification</th>

            </tr>
            </thead>
            <tbody>
            {% for vac in intervention  %}
                <tr>
                    <td>{{vac.firstName }} {{ vac.lastName }}</td>
                    <td>{{vac.vaccinName}}</td>
                    <td>
                        {{ vac.datePriseVaccin|date }}
                    </td>
                    <td>
                        {{ vac.identification }}
                    </td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    <!-- DataTables -->
    <script>
        $('.modif-status').on('click', function (e) {
            $(".loadBody").css("display", "block");
            e.preventDefault();
            var id = $(this).data('id');
            var type = $(this).data('type');
            var status = $(this).data('status');
            var action = $(this).data('action');
            var date = $(this).data('date');
            var praticien = $(this).data('praticien');
            var patient = $(this).data('patient');
            var carnet = $(this).data('carnet');
            var numero = $(this).data('numero');

            $.ajax({
                url: "{{ path('change_status') }}",
                type: 'post',
                data: {
                    id: id,
                    type: type,
                    status: status,
                    date: date,
                    praticien: praticien,
                    patient: patient,
                    carnet: carnet,
                    numero: numero,
                    action: action
                },
                dataType: "json",
                success: (data) =>{
                    $(".loadBody").css("display", "none");
                    location.reload();
                },
                error: (e) => {
                    $(".loadBody").css("display", "none");
                    $(".chargementError").css("display", "block");
                }
            }).done(() => {
                $(".loadBody").css("display", "none");
            });

        });
        $(document).ready(function() {
            $('#example1').DataTable();
        });
    </script>
{% endblock %}
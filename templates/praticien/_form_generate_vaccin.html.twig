{% extends 'include/base.html.twig' %}
{%  block title %}
    {% trans %}GENERATION OF A SPECIFIC VACCINE{% endtrans %}
{% endblock %}
{% block stylesheets %}

    <style>
        .md-form.row-check {
            flex-direction: row;
            display: flex;
        }
        .association-form {
            display: none;
        }
    </style>
{% endblock %}

{% block body %}

    <div class="modal-header text-center">
        <h5 class="modal-title white-text w-100 font-weight-bold py-2">{% trans %}GENERATION OF A SPECIFIC VACCINE{% endtrans %}</h5>
    </div>
    <!--Content-->
    {{ form_start(form, {'attr': {'action': path('generate_vaccin') }}) }}
    <!--Body-->
    <div class="modal-body" style="width:69%; margin-left: 17%">
        <div class="md-form">
            <label class="active" for="form1">{% trans %}Patient{% endtrans %} </label>
            {{ form_widget(form.patient, {'attr': { 'class': 'form-control chosen-select' }}) }}
        </div>
        <div class="md-form">
            <label class="active" for="form1">{% trans %}Vaccine{% endtrans %}</label>
            {{ form_widget(form.vaccin, {'attr': { 'class': 'form-control chosen-select' }}) }}

        </div>
        <div class="md-form">
            <label class="active" for="form1">Identification</label>
            {{ form_widget(form.identification, {'attr': { 'class': 'form-control' }}) }}

        </div>
        <div class="md-form">
            <label class="active" for="form1">{% trans %}Date Taken{% endtrans %}</label>
            {{ form_widget(form.date_prise, {'attr': { 'class': 'form-control' }}) }}
        </div>
        <div class="md-form">
            <label class="active" for="form1">{% trans %}Time Taken{% endtrans %}</label>
            {{ form_widget(form.heureprise, {'attr': { 'class': 'form-control' }}) }}
        </div>

    </div>
    <div class="modal-footer justify-content-center">
        <button type="button" class="btn btn-outline-danger waves-effect" data-dismiss="modal" aria-label="Close"><i class="fas fa-remove ml-1"></i> {% trans %}Cancel{% endtrans %} </button>
        <button type="submit" class="btn btn-outline-primary waves-effect submit_new_center_health"><i class="fas fa-save ml-1"></i> {% trans %}VALIDATE{% endtrans %} </button>
    </div>

    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}

    <script type="text/javascript">

        $('.chosen-select').chosen({width: "100%"});
        $('#generation_vaccin_date_prise').datepicker({
            format: 'dd/mm/yyyy',
            autoclose: true,
            todayHighlight:'TRUE',
            startDate: '-0d',

        });
        $('#generation_vaccin_heureprise').clockpicker({
            donetext: "valider",
            autoclose: true,
        });
        $('#generation_vaccin_heureprise').on('change', function () {
            let receivedVal = $(this).val();
            $(this).val(receivedVal);
        });
        $('.chosen-select').trigger('chosen:updated');



    </script>

{% endblock %}
{% extends 'include/base.html.twig' %}
{%  block title %}
    Consultation
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('vendor/datatables-bs4/css/dataTables.bootstrap4.css')}}">
{% endblock %}

{% block body %}
    <div class="row head-table col-md-12">
        <div class="grid-title-table col-md-9 mt-4">
            <h4 class="h4-content">{% trans %}All consultations{% endtrans %}</h4>
        </div>
    </div>
    <div class="row-table table-content">
        <table class="table table-striped" id="example1">
            <thead>
            <tr>
                <th>Date</th>

                <th>{% trans %}Object of consultation{% endtrans %}</th>
                <th>Patient</th>
                <th>{% trans %}Status{% endtrans %}</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for rdv in consultation  %}
                <tr>
                    <td>
                        {{ rdv.dateRdv |format_datetime('full', 'short', locale=app.request.locale) }}
                    </td>

                    <td style="width: 300px;">
                        {{ rdv.objetConsultation }}
                    </td>
                    <td>
                        {{ rdv.firstName }} {{ rdv.lastName }}
                    </td>

                    <td>
                        {% if rdv.statusConsultation == 0  %}
                            <p class="badge badge-info  textf">{% trans %}waiting{% endtrans %}</p>
                        {% elseif rdv.statusConsultation == 2 %}
                            <p class="badge badge-danger  textf">{% trans %}Canceled{% endtrans %}</p>
                        {% elseif rdv.statusConsultation == 1 and rdv.etat == 0 %}
                            <p class="badge badge-primary  textf">{% trans %}Scheduled{% endtrans %}</p>
                        {% elseif rdv.statusConsultation == 1 and rdv.etat == 1 %}
                            <p class="badge badge-success textf">{% trans %}Realized{% endtrans %}</p>
                        {% endif %}
                    </td>
                    <td>
                        {% if rdv.statusConsultation == 0 and rdv.etat == 0  %}
                        <span  class="badge badge-success badge-style modif-status" data-id="{{ rdv.id }}"   data-type="consultation" data-action="active">{% trans %}Organize{% endtrans %}</span>
                        <span class="badge badge-danger badge-style modif-status" data-id="{{ rdv.id }}" data-type="consultation" data-action="reject" >{% trans %}Reject{% endtrans %}</span>
                        {% elseif rdv.statusConsultation == 1 and rdv.etat == 0 %}
                            <span  class="badge badge-success badge-style modif-status" data-id="{{ rdv.id }}"   data-type="test" data-action="active">{{ 'Realize'|trans }}</span>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>

{% endblock %}
{% block javascripts %}
    <!-- DataTables -->
    <script src="{{asset('vendor/datatables/jquery.dataTables.js')}}"></script>
    <script src="{{asset('vendor/datatables-bs4/js/dataTables.bootstrap4.js')}}"></script>
    <script>
        $(document).ready(function() {
            $('#example1').DataTable();
        });

        $('.modif-status').on('click', function (e) {
            $(".loadBody").css("display", "block");
            e.preventDefault();
            var id = $(this).data('id');
            var type = $(this).data('type');
            var action = $(this).data('action');

            $.ajax({
                url: "{{ path('change_status') }}",
                type: 'post',
                data: {
                    id: id,
                    type: type,
                    action: action
                },
                dataType: "json",
                success: (data) =>{
                    $(".loadBody").css("display", "none");
                    location.reload();
                },
                error: (e) => {
                    $(".loadBody").css("display", "none");
                    $(".chargementError").css("display", "block");
                }
            }).done(() => {
                $(".loadBody").css("display", "none");
            });

        });

    </script>
{% endblock %}
{% extends 'include/base.html.twig' %}
{%  block title %}
    Consultations
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('vendor/datatables-bs4/css/dataTables.bootstrap4.css')}}">
{% endblock %}

{% block body %}
    <div class="row head-table col-md-12">
        <div class="grid-title-table col-md-9 mt-4">
            <h4 class="h4-content">Tous les consultation</h4>
        </div>
    </div>
    <div class="row-table table-content">
        <table class="table table-striped" id="example1">
            <thead>
            <tr>
                <th>Date Consultation</th>
                <th>Objet de consultation </th>
                <th>Patient</th>
                <th>Etat Intervention</th>

                {# <th>More</th> #}
            </tr>
            </thead>
            <tbody>
            {% for rdv in consultation  %}
                <tr>
                    <td>
                        {{ rdv.dateRdv |format_datetime('full', 'short', locale=app.request.locale) }}
                    </td>

                    <td>
                        {{ rdv.objetConsultation }}
                    </td>
                    <td>
                        {{ rdv.firstName }} {{ rdv.lastName }}
                    </td>
                    <td>

                            <span class="badge badge-success badge-style modif-etat" data-praticien="{{ rdv.praticien }}" data-patient="{{ rdv.patient }}" data-date="{{ rdv.dateRdv |date}}" data-type="consultation" data-id="{{ rdv.id }}" data-etat="{{ rdv.etat }}" data-action="active">Fait</span>
                            <span class="badge badge-danger badge-style modif-etat" data-praticien="{{ rdv.praticien }}" data-patient="{{ rdv.patient }}" data-date="{{ rdv.dateRdv |date}}" data-type="consultation" data-id="{{ rdv.id }}" data-etat="{{ rdv.etat }}" data-action="reject">Non Fait</span>
                    </td>

                </tr>
            {% endfor %}f
            </tbody>
        </table>
    </div>

{% endblock %}

{% block javascripts %}
    <!-- DataTables -->
    <script src="{{asset('vendor/datatables/jquery.dataTables.js')}}"></script>
    <script src="{{asset('vendor/datatables-bs4/js/dataTables.bootstrap4.js')}}"></script>
    <script>
        $('.modif-etat').on('click', function (e) {
            e.preventDefault();
            var id = $(this).data('id');
            var type = $(this).data('type');
            var etat = $(this).data('etat');
            var action = $(this).data('action');
            var date = $(this).data('date');
            var praticien = $(this).data('praticien');
            var patient = $(this).data('patient');

            $.ajax({
                url: "{{ path('update_etat') }}",
                type: 'post',
                data: {
                    id: id,
                    type: type,
                    etat: etat,
                    date: date,
                    praticien: praticien,
                    patient: patient,
                    action: action
                },
                dataType: "json",
                success: (data) =>{
                   $(".loadBody").css("display", "none");
                    location.reload();
                },
                error: (e) => {
                    $(".loadBody").css("display", "none");
                    $(".chargementError").css("display", "block");
                }
            }).done(() => {
                $(".loadBody").css("display", "none");
            });

        });
        $("#example1").DataTable({
            language: {
                url: "{{ asset('vendor/datatables/lang.json') }}"
            }
        });
        $('.mdb-select').materialSelect();
        $('.active_etat_rdv').on('click', function (e) {
            e.preventDefault();
            var id = $(this).data('id');
            var etat = $(this).data('etat');
            $.ajax({
                url: "{{ path('update_etat_rdv') }}",
                type: 'post',
                data: {
                    'id_rdv': id,
                    'etat': etat
                },
                dataType: "json",
                success: (data) =>{
                    if(data.status == 'OK' ){
                        location.reload();
                    }
                },
                error: (e) => {
                    console.log(e.statusText);
                }
            }).done(() => {

            });
        });

        $('.active_status_rdv').on('click', function (e) {
            e.preventDefault();
            var id = $(this).data('id');
            var status = $(this).data('status');

            $.ajax({
                url: "{{ path('update_status_rdv') }}",
                type: 'post',
                data: {
                    'id_rdv': id,
                    'status': status
                },
                dataType: "json",
                success: (data) =>{
                    if(data.status == 'OK' ){
                        location.reload();
                    }
                },
                error: (e) => {
                    console.log(e.statusText);
                }
            }).done(() => {

            });
        });

        $(".create-consultation").click((e) => {
            $.ajax({
                url: "{{ path('add_form_rdv') }}",
                type: 'post',
                data: {action: 'new'},
                success: (data) => {
                    $('.create_body').html(data.form_consultation_html);
                    $("#modal_create_body").modal('show');
                },
                error: (e) => {
                    console.log(e.statusText);
                }
            }).done(() => {
            });
        })

    </script>
{% endblock %}
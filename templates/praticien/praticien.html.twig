{% extends 'include/base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block body %}
<div class="container">
    <div class="row head-table col-md-12">
        <div class="grid-title-table col-md-9 mt-4">
            <h4 class="h4-content">{% trans %}List of patients{% endtrans %}</h4>
        </div>
        <div class="grid-edit-btn col-md-3 mt-3">
            <button class="btn btn-info">+ Add membres</button>
            <button class="btn btn-danger">{% trans %}+ Create patient{% endtrans %}</button>
        </div>
    </div>
    <div class="d-flex table-input-up">
        <div class="form-group d-flex pr-4">
            <label for="exampleFormControlSelect1">{% trans %}Display :{% endtrans %}</label>
            <select class="form-control select1" id="exampleFormControlSelect1">
              <option>1</option>
              <option>5</option>
              <option>10</option>
            </select>
        </div>
        <div class="form-group d-flex">
            <label for="exampleFormControlSelect1">{% trans %}Sort by :{% endtrans %}</label>
            <select class="form-control select1" id="exampleFormControlSelect1">
                <option>{% trans %}Pregnant woman{% endtrans %}</option>
                <option>{% trans %}Newborns{% endtrans %}</option>
                <option>{% trans %}Man{% endtrans %}</option>
            </select>
        </div>
    </div>
    <div class="row-table table-content">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>{% trans %} Last name {% endtrans %}</th>
                    <th>{% trans %} First name {% endtrans %}</th>
                    <th>{% trans %}Phone{% endtrans %}</th>
                    <th>Type</th>
                    <th>E-mail</th>
                    <th>{% trans %}Sex{% endtrans %}</th>
                    <th>{% trans %}Date of Birth{% endtrans %}</th>
                    <th>{% trans %}Vaccination schedule{% endtrans %}</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><a href="#">Gomez</a></td>
                    <td>Maria</td>
                    <td></td>
                    <td></td>
                    <td>Maria@gmail.com</td>
                    <td>Femme</td>
                    <td>05/04/2020</td>
                    <td>05/04/2020</td>
                    <td style="text-align: right">
                        <i class="fas fa-eye"></i>
                        <i class="fa fa-edit"></i>
                        <i class="fa fa-ellipsis-v"></i>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="navigation">
        <nav aria-label="Page">
            <ul class="pagination">
                <li class="page-item" id="prev"><a class="page-link" href="#"><i class="fa fa-chevron-left"></i></a></li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item" id="next"><a class="page-link" href="#"><i class="fa fa-chevron-right"></i></a></li>
            </ul>
        </nav>
    </div>
</div>

{% endblock %}
{% extends 'include/base.html.twig' %}
{%  block title %}
    {% trans %}Appointment {% endtrans %}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row head-table col-md-12">
        <div class="grid-title-table col-md-9 mt-4">
            <h4 class="h4-content">{% trans %}Appointment {% endtrans %}</h4>
        </div>

    </div>
    <div class="row-table table-content">
        <table class="table table-striped" id="example1">
            <thead>
            <tr>
                <th>{% trans %}Appointment date{%  endtrans %}</th>
                <th>Type</th>
                <th>{% trans %}Object of consultation{% endtrans %} </th>
                <th>Patient</th>
                {# <th>{% trans %}Vaccine{% endtrans %}</th> #}
                <th>Status</th>
                <th></th>

            </tr>
            </thead>
            <tbody>
            {% for rdv in consultation  %}
                <tr>
                    <td class="text-left">
                        {{ rdv.dateRdv |format_datetime('full', 'short', locale=app.request.locale)}}
                    </td>
                    <td>Consultation</td>
                    <td>
                        {{ rdv.objetConsultation }}
                    </td>
                    <td>
                        {{ rdv.firstName }}
                        {{ rdv.lastName }}
                    </td>
                    <td></td>
                    <td>
                        <span  class="badge badge-success badge-style modif-status" data-praticien="{{ rdv.praticien }}" data-patient="{{ rdv.patient }}" data-date="{{ rdv.dateRdv |date}}" data-id="{{ rdv.id }}" data-type="consultation" data-action="active" data-status="{{rdv.statusConsultation}}">{% trans %}Realize{% endtrans %}</span>
                        <span class="badge badge-danger badge-style modif-status" data-praticien="{{ rdv.praticien }}" data-patient="{{ rdv.patient }}" data-date="{{ rdv.dateRdv |date}}" data-id="{{ rdv.id }}" data-type="consultation" data-action="reject" data-status="{{rdv.statusConsultation}}">{% trans %}Reject{% endtrans %}</span>
                    </td>
                    <td>
                        <span class="btn btn-primary data-edit" data-id="{{ rdv.id }}" data-type="consultation"><i class="fa fa-pencil"></i></span>
                        <span class="btn btn-danger data-remove" data-id="{{ rdv.id }}" data-type="consultation"><i class="fa fa-trash-o"></i></span>
                    </td>

                </tr>
            {% endfor %}

            {% for vac in vaccination  %}
                <tr>
                    <td>
                        {{ vac.datePrise |format_datetime('full', 'short', locale=app.request.locale) }}
                        {#{ user.createdAt|localizeddate('none', 'none', app.request.locale, null, 'EEEE d MMMM Y') }}#}
                    </td>
                    <td>Vaccination</td>
                    <td>

                    </td>
                    <td>
                        {{ vac.firstName }} {{ vac.lastName }} <br>
                    </td>
                    {# <td>{{ vac.vaccinName }}</td> #}
                    <td>

                        <span class="badge badge-success badge-style modif-status"  data-type="vaccination" data-vaccin="{{vac.vaccin }}"  data-action="active" data-id="{{ vac.id }}" data-status="{{vac.statusVaccin}}" data-date="{{ vac.datePrise |date}}"  data-praticien="{{ vac.praticien }}" data-patient="{{ vac.patient }}" >{% trans %}Accept{% endtrans %}</span>
                        <span  class="badge badge-danger badge-style modif-status" data-type="vaccination" data-vaccin="{{vac.vaccin }}"  data-type="vaccination" data-action="reject" data-id="{{ vac.id }}" data-status="{{vac.statusVaccin}}" data-date="{{ vac.datePrise |date}}"  data-praticien="{{ vac.praticien }}" data-patient="{{ vac.patient }}" >{% trans %}Reject{% endtrans %}</span>
                    </td>
                    <td>
                        <span class="btn btn-primary data-edit" data-id="{{ vac.id }}" data-type="vaccination"><i class="fa fa-pencil"></i></span>
                        <span class="btn btn-danger data-remove" data-id="{{ vac.id }}" data-type="vaccination"><i class="fa fa-trash-o"></i></span>
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>

{% endblock %}

{% block javascripts %}
    <!-- DataTables -->
    <script>
        $(".add_form_rdv").on('click' , function(e) {
            $(".loadBody").css("display", "block");
            e.preventDefault();
            $.ajax({
                url: "{{ path('add_form_rdv_patient') }}",
                type: 'post',
                data: {
                    action: 'new'
                },
                dataType: 'json',
                success: (data) => {
                    $('.create_body').html(data.form_html);
                    $("#modal_create_body").modal('show');
                    $('#rdv_heureRdv').clockpicker({
                        donetext: "valider",
                        autoclose: true,
                    });
                    $('#rdv_heureRdv').on('change', function () {
                        let receivedVal = $(this).val();
                        $(this).val(receivedVal + ":00");
                    });

                    $(".loadBody").css("display", "none");
                },
                error: (e) => {
                    $(".loadBody").css("display", "none");
                    $(".chargementError").css("display", "block");
                }
            }).done(() => {
                $(".loadBody").css("display", "none");
            });
        });
        $('.modif-status').on('click', function (e) {
            e.preventDefault();
            var id = $(this).data('id');
            var type = $(this).data('type');
            var status = $(this).data('status');
            var action = $(this).data('action');
            var date = $(this).data('date');
            var praticien = $(this).data('praticien');
            var patient = $(this).data('patient');
            var vaccin = $(this).data('vaccin');

            $.ajax({
                url: "{{ path('change_status') }}",
                type: 'post',
                data: {
                    id: id,
                    type: type,
                    status: status,
                    date: date,
                    praticien: praticien,
                    patient: patient,
                    vaccin:vaccin,
                    action: action
                },
                dataType: "json",
                success: (data) =>{
                    $(".loadBody").css("display", "none");
                    location.reload();
                },
                error: (e) => {
                    $(".loadBody").css("display", "none");
                    $(".chargementError").css("display", "block");
                }
            }).done(() => {
                $(".loadBody").css("display", "none");
            });

        });

        $('.data-edit').on('click', function (e) {
            e.preventDefault();
            var id = $(this).data('id');
            var type = $(this).data('type');
            $.ajax({
                url: "{{ path('add_form_rdv_patient') }}",
                type: 'post',
                data: {
                    id: id,
                    type: type,
                    action: 'edit'
                },
                dataType: "json",
                success: (data) =>{
                    $('.create_body').html(data.form_html);
                    $("#modal_create_body").modal('show');
                    $('#rdv_heureRdv').clockpicker({
                        donetext: "valider",
                        autoclose: true,
                    });
                    $('#rdv_heureRdv').on('change', function () {
                        let receivedVal = $(this).val();
                        $(this).val(receivedVal + ":00");
                    });
                    $(".loadBody").css("display", "none");
                },
                error: (e) => {
                    $(".loadBody").css("display", "none");
                    $(".chargementError").css("display", "block");
                }
            }).done(() => {
                $(".loadBody").css("display", "none");
            });
        });


        $('.data-remove').on('click', function (e) {
            e.preventDefault();
            var $delete = confirm('Êtes-vous sûr de vouloir supprimer cet rdv ?');
            if($delete){
                $(".loadBody").css("display", "block");
                var id = $(this).data('id');
                var type = $(this).data('type');
                $.ajax({
                    url: "{{ path('remove_rdv_patient') }}",
                    type: 'post',
                    data: {
                        id: id,
                        type: type,
                    },
                    dataType: "json",
                    success: (data) =>{
                        $(".loadBody").css("display", "none");
                        location.reload();
                    },
                    error: (e) => {
                        $(".loadBody").css("display", "none");
                        $(".chargementError").css("display", "block");
                    }
                }).done(() => {
                    $(".loadBody").css("display", "none");
                });
            }else {
                return false
            }
        });

        $(document).ready(function () {
            $("#example1").DataTable({
                language: {
                    url: "{{ asset('vendor/datatables/English.json') }}"

                }
            });
            $('.mdb-select').materialSelect();

            $('.date_rdv').datepicker({
                format: 'dd/mm/yyyy',
                autoclose: true,
            });
        })

    </script>
{% endblock %}
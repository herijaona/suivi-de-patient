
{% block stylesheets %}

    <style>
        .md-form.row-check {
            flex-direction: row;
            display: flex;
        }
        .association-form {
            display: none;
        }
    </style>
{% endblock %}

{% block body %}

    <div class="modal-header text-center">

            <h4 class="modal-title white-text w-100 font-weight-bold py-2">
                {% trans %}Accept Appointment{% endtrans %}
            </h4>
    </div>
    <!--Content-->
    {{ form_start(form, {'attr': {'action': path('accept_rdv') }}) }}
    <!--Body-->
    <div class="modal-body" style="width:69%; margin-left: 17%">
        <div class="md-form ">
            <label class="active" for="form1">{% trans %}Appointment date{%  endtrans %}</label>
            {{ form_widget(form.dateRdv, {'attr': { 'class': 'form-control' }}) }}
        </div>
        <div class="md-form ">
            <label class="active" for="form1">{% trans %}appointment Time {% endtrans %} </label>
            {{ form_widget(form.heureRdv, {'attr': { 'class': 'form-control' }}) }}
        </div>


    </div>
    <div class="modal-footer justify-content-center">
        <button type="button" class="btn btn-outline-danger waves-effect" data-dismiss="modal" aria-label="Close"><i class="fas fa-remove ml-1"></i> {% trans %}Cancel{% endtrans %} </button>
        <button type="submit" class="btn btn-outline-primary waves-effect submit_new_center_health"><i class="fas fa-save ml-1"></i> {% trans %}Save{% endtrans %} </button>
    </div>

    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {

            $('#accept_dateRdv').datepicker({
                format: 'dd/mm/yyyy',
                autoclose: true,
                todayHighlight:'TRUE',
                startDate: '-0d',
            });
            $('#accept_heureRdv').clockpicker({
                donetext: "valider",
                autoclose: true,
            });
            $('#accept_heureRdv').on('change', function () {
                let receivedVal = $(this).val();
                $(this).val(receivedVal );
            });
        });
    </script>

{% endblock %}
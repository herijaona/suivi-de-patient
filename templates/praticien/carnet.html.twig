
{% extends 'include/base.html.twig' %}
{%  block title %}
    {% trans %}Vaccination schedule {% endtrans %}
{% endblock %}
{% block stylesheets %}

{% endblock %}

{% block body %}
    <div class="row head-table col-md-12">
        <div class="grid-title-table col-md-9 mt-4">
            <h4 class="h4-content">{% trans %}Vaccination schedule {% endtrans %}</h4>
        </div>
    </div>
    <div class="row-table table-content">
        <table class="table table-striped" id="example1">
            <thead>
            <tr>
                <th>{% trans %}Vaccine Name{% endtrans %}</th>
                <th>{% trans %}ID Vaccine{% endtrans %}</th>
                <th>{% trans %}Date Taken{% endtrans %}</th>
                <th>Patient</th>
                <th>Identification</th>
            </tr>
            </thead>
            <tbody>
            {# {{dump(vaccination)}} #}
            {% for carnet in listVaccins %}
                <tr>
                    <td>{{ carnet.vaccinName }}</td>
                    <td>{{ carnet.identifiant_vaccin }}</td>
                    <td>{{ carnet.date_prise|localizeddate('none', 'none', app.request.locale, null, 'dd MMMM yyyy') }}</td>
                    <td>{{carnet.lastName}} {{carnet.firstName}} </td>
                    <td>{{carnet.identification}}</td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block javascripts %}
    <!-- DataTables -->
    <script>
        $('.modif-carnet').on('click', function (e) {
            e.preventDefault();
            var id = $(this).data('id');
            var etat = $(this).data('etat');
            $.ajax({
                url: "{{ path('update_carnet') }}",
                type: 'post',
                data: {
                    id: id,
                    etat: etat
                },
                dataType: "json",
                success: (data) =>{
                    $(".loadBody").css("display", "none");
                    location.reload();
                },
                error: (e) => {
                    $(".loadBody").css("display", "none");
                    $(".chargementError").css("display", "block");
                }
            }).done(() => {
                $(".loadBody").css("display", "none");
            });
        });

        $('.edit-date-carnet').on('click', function (e) {
            e.preventDefault();
            $(".loadBody").css("display", "block");
            var idCarnet = $(this).data('id');
            $.ajax({
                url: "{{ path('show_edit_carnet') }}",
                type: 'post',
                data: {
                    id: idCarnet
                },
                dataType: "json",
                success: (data) =>{
                    $('.create_body').html(data.form_html);
                    $("#modal_create_body").modal('show');

                    $(".loadBody").css("display", "none");
                },
                error: (e) => {
                    $(".loadBody").css("display", "none");
                    $(".chargementError").css("display", "block");
                }
            }).done(() => {
                $(".loadBody").css("display", "none");
            });
        });


        $(document).ready(function() {
            $('#example1').DataTable();
        });
    </script>
{% endblock %}
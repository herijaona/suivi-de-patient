{% extends 'include/base.html.twig' %}
{%  block title %}
    Intervention
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row head-table col-md-12">
        <div class="grid-title-table col-md-9 mt-4">
            <h4 class="h4-content">Intervention </h4>
        </div>

    </div>
    <div class="row-table table-content">
        <table class="table table-striped" id="example1">
            <thead>
            <tr>
                <th>{% trans %}Intervention date{% endtrans %}</th>
                <th>Type</th>
                <th>{% trans %}Object of consultation{% endtrans %}</th>
                <th>Patient</th>
                <th>{% trans %}State Intervention{% endtrans %}</th>


            </tr>
            </thead>
            <tbody>
            {% for icp in consultation  %}
                <tr>
                    <td class="text-left">
                        {{ icp.dateConsultation |format_datetime('full', 'short', locale=app.request.locale)}}
                    </td>
                    <td>Consultation</td>
                    <td>{{ icp.objetConsultation }}</td>
                    <td>{{ icp.patient_name }} {{ icp.patient_lastname }} </td>
                    <td>
                        {% if icp.etat == 0  %}
                            <span class="badge badge-success badge-style modif-etat" data-etat="{{ icp.etat }}" data-id = {{ icp.id }}  data-type="consultation"  data-action="active">{% trans %}Realize{% endtrans %}</span>
                        {% elseif icp.etat == 1 %}
                            <span class="badge badge-info badge-style ">{% trans %}Realized{% endtrans %}</span>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}

            {% for ivp in vaccination  %}
                <tr>
                    <td>
                        {{ ivp.datePriseVaccin |format_datetime('full', 'short', locale=app.request.locale) }}
                    </td>
                    <td>Vaccination</td>
                    <td></td>
                    <td>{{ ivp.patient_name }} {{ ivp.patient_lastname }}  </td>
                    <td>
                        {% if ivp.etat == 0  %}
                        <span class="badge badge-success badge-style modif-etat" data-etat="{{ ivp.etat }}" data-id = {{ ivp.id }}  data-type="vaccination"  data-action="active">{% trans %}Realize{% endtrans %}</span>
                        {% elseif ivp.etat == 1 %}
                            <span class="badge badge-info badge-style ">{% trans %}Realized{% endtrans %}</span>
                        {% endif %}
                    </td>



                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{asset('vendor/datatables/jquery.dataTables.js')}}"></script>
    <script src="{{asset('vendor/datatables-bs4/js/dataTables.bootstrap4.js')}}"></script>
    <script>
    $("#example1").DataTable({
    language: {
    url: "{{ asset('vendor/datatables/English.json') }}"

    }
    });

    $('.modif-etat').on('click', function (e) {
        e.preventDefault();
        var id = $(this).data('id');
        var type = $(this).data('type');
        var etat = $(this).data('etat');
        var action = $(this).data('action');
        $.ajax({
            url: "{{ path('update_etat') }}",
            type: 'post',
            data: {
                id: id,
                type: type,
                etat: etat,
                action: action
            },
            dataType: "json",
            success: (data) =>{
                $(".loadBody").css("display", "none");
                location.reload();
            },
            error: (e) => {
                $(".loadBody").css("display", "none");
                $(".chargementError").css("display", "block");
            }
        }).done(() => {
            $(".loadBody").css("display", "none");
        });
    });

    </script>
{% endblock %}
{% extends 'include/base.html.twig' %}
{%  block title %}
    Intervention
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row head-table col-md-12">
        <div class="grid-title-table col-md-9 mt-4">
            <h4 class="h4-content">Intervention </h4>
        </div>

    </div>
    <div class="row-table table-content">
        <table class="table table-striped" id="example1">
            <thead>
            <tr>
                <th>{% trans %}Intervention date{% endtrans %}</th>
                <th>Type</th>
                <th>{% trans %}Vaccine{% endtrans %}</th>
                <th>Patient</th>
                <th>{% trans %}State Intervention{% endtrans %}</th>
            </tr>
            </thead>
            <tbody>
            {% for vac in vaccination  %}
                <tr>
                    <td>
                        {{ vac.datePriseVaccin |format_datetime('full', 'short', locale=app.request.locale) }}
                        {#{ user.createdAt|localizeddate('none', 'none', app.request.locale, null, 'EEEE d MMMM Y') }}#}
                    </td>
                    <td>Intervention</td>
                    <td>
                        {{ vac.vaccinName }}
                    </td>
                    <td>
                        {{ vac.firstName }} {{ vac.lastName }} <br>
                    </td>
                    <td>
                        {% if vac.statusVaccin == 0  %}
                            <span class="badge badge-success badge-style modif-status"  data-type="intervention"  data-action="active" data-id="{{ vac.id }}" data-status="{{vac.statusVaccin}}" data-date="{{ vac.datePriseVaccin |date}}">{% trans %}Realize{% endtrans %}</span>
                            <span  class="badge badge-danger badge-style modif-status" data-type="intervention"   data-action="reject" data-id="{{ vac.id }}" data-status="{{vac.statusVaccin}}" data-date="{{ vac.datePriseVaccin |date}}">{% trans %}Reject{% endtrans %}</span>
                        {% elseif vac.statusVaccin == 1 %}
                            <span class="badge badge-info badge-style ">{% trans %}Realized{% endtrans %}</span>
                        {% elseif vac.statusVaccin == 2 %}
                            <span class="badge badge-danger badge-style">{% trans %}Reject{% endtrans %}</span>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            {% for proposition in proposition  %}
                <tr>
                    <td>
                        {{ proposition.dateProposition |format_datetime('full', 'short', locale=app.request.locale) }}
                        {#{ user.createdAt|localizeddate('none', 'none', app.request.locale, null, 'EEEE d MMMM Y') }}#}
                    </td>
                    <td>{% trans %}Vaccine Proposal{% endtrans %}</td>
                    <td>
                        {{ proposition.vaccinName }}
                    </td>
                    <td>
                        {{ proposition.firstName }} {{ proposition.lastName }} <br>
                    </td>
                    <td>
                        {% if proposition.etat == 1 %}
                            <span class="badge badge-info badge-style">{% trans %}Realized{% endtrans %}</span>
                        {% elseif proposition.etat == 0 %}
                            <span  class="badge badge-success badge-style modif-status" data-id="{{ proposition.id }}" data-type="proposition" data-action="active" data-etat="{{ proposition.etat }}">{% trans %}Accept{% endtrans %}</span>
                            <span  class="badge badge-danger badge-style modif-status" data-id="{{ proposition.id }}" data-type="proposition" data-action="reject" data-etat="{{ proposition.etat }}">{% trans %}Reject{% endtrans %}</span>
                        {% elseif proposition.etat == 2 %}
                            <span class="badge badge-danger badge-style">{% trans %}Reject{% endtrans %}</span>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{asset('vendor/datatables/jquery.dataTables.js')}}"></script>
    <script src="{{asset('vendor/datatables-bs4/js/dataTables.bootstrap4.js')}}"></script>
    <script>
    $('.modif-status').on('click', function (e) {
        e.preventDefault();
        var id = $(this).data('id');
        var type = $(this).data('type');
        var action = $(this).data('action');
        var status = $(this).data('status');
        var date = $(this).data('date');

        $.ajax({
            url: "{{ path('change_status') }}",
            type: 'post',
            data: {
                id: id,
                type: type,
                action:action,
                status:status,
                date : date
            },
            dataType: "json",
            cache: false,
            success: (data) =>{
               $(".loadBody").css("display", "none");
                location.reload();
            },
            error: (e) => {
                $(".loadBody").css("display", "none");
                $(".chargementError").css("display", "block");
            }
        }).done(() => {
            $(".loadBody").css("display", "none");
        });
    });
    $(document).ready(function() {
        $('#example1').DataTable();
    });

    </script>
{% endblock %}
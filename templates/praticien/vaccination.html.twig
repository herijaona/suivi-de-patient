{% extends 'include/base.html.twig' %}
{%  block title %}
    Vaccination
{% endblock %}
{% block stylesheets %}

{% endblock %}

{% block body %}
    <div class="row head-table col-md-12">
        <div class="grid-title-table col-md-9 mt-4">
            <h4 class="h4-content">{% trans %}All Vaccinations {% endtrans %}</h4>
        </div>
    </div>
    <div class="row-table table-content">
        <table class="table table-striped" id="example1">
            <thead>
            <tr>
                <th>{% trans %}Vaccination date {% endtrans %}</th>
                <th>Patient</th>
                <th>Status</th>
                <th>{% trans %}Vaccination schedule {% endtrans %}</th>

            </tr>
            </thead>
            <tbody>
                {# {{dump(vaccination)}} #}
            {% for vac in vaccination  %}
                <tr>
                    <td >
                        {{ vac.datePrise |format_datetime('full', 'short', locale=app.request.locale) }}
                        {#{ user.createdAt|localizeddate('none', 'none', 'fr', null, 'd MMMM Y') }}#}
                    </td>

                    <td>{{ vac.firstName }} {{ vac.lastName }}</td>
                    <td style="text-align: center">
                        {% if vac.statusVaccin == 1 %}
                            <span class="badge badge-info badge-style ">{% trans %}Accepted{% endtrans %}</span>
                        {% elseif vac.statusVaccin == 0 %}
                            <span class="badge badge-success badge-style modif-status"  data-type="vaccination"  data-action="active" data-id="{{ vac.id }}" data-status="{{vac.statusVaccin}}" data-date="{{ vac.datePrise |date}}"  data-praticien="{{ vac.praticien }}" data-patient="{{ vac.patient }}" >{% trans %}Realize{% endtrans %}</span>
                            <span  class="badge badge-danger badge-style modif-status" data-type="vaccination"  data-action="reject" data-id="{{ vac.id }}" data-status="{{vac.statusVaccin}}" data-date="{{ vac.datePrise |date}}"  data-praticien="{{ vac.praticien }}" data-patient="{{ vac.patient }}" >{% trans %}Reject{% endtrans %}</span>
                        {% elseif vac.statusVaccin == 2 %}
                            <span class="badge badge-danger badge-style">{% trans %}Reject{% endtrans %}</span>
                        {% endif %}
                    </td>

                    <td style="text-align: center">
                        {% if vac.statusVaccin == 1 %}
                            <a href="{{ path('see_calendar', {'patient_id' : vac.patient}) }}" class="badge badge-success badge-style">{% trans %}See{% endtrans %}</a>
                        {% endif %}
                    </td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    <!-- DataTables -->
    <script>
        $('.modif-status').on('click', function (e) {
            $(".loadBody").css("display", "block");
            e.preventDefault();
            var id = $(this).data('id');
            var type = $(this).data('type');
            var status = $(this).data('status');
            var action = $(this).data('action');
            var date = $(this).data('date');
            var praticien = $(this).data('praticien');
            var patient = $(this).data('patient');
            $.ajax({
                url: "{{ path('change_status') }}",
                type: 'post',
                data: {
                    id: id,
                    type: type,
                    status: status,
                    date: date,
                    praticien: praticien,
                    patient: patient,
                    action: action
                },
                dataType: "json",
                success: (data) =>{
                    $(".loadBody").css("display", "none");
                    location.reload();
                },
                error: (e) => {
                    $(".loadBody").css("display", "none");
                    $(".chargementError").css("display", "block");
                }
            }).done(() => {
                $(".loadBody").css("display", "none");
            });

        });
        $(document).ready(function() {
            $('#example1').DataTable();
        });
    </script>
{% endblock %}
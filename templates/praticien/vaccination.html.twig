{% extends 'include/base.html.twig' %}
{%  block title %}
    Vaccination
{% endblock %}
{% block stylesheets %}

{% endblock %}

{% block body %}
    <div class="row head-table col-md-12">
        <div class="grid-title-table col-md-9 mt-4">
            <h4 class="h4-content">Tous les vaccinations</h4>
        </div>
    </div>
    <div class="row-table table-content">
        <table class="table table-striped" id="example1">
            <thead>
            <tr>
                <th>Date vaccination</th>
                <th>Patient</th>
                <th>Vaccin</th>
                <th>Etat Intervention</th>
            </tr>
            </thead>
            <tbody>
            {% for vac in vaccination  %}
                <tr>
                    <td>
                        {{ vac.datePrise |format_datetime('full', 'short', locale=app.request.locale) }}
                        {#{ user.createdAt|localizeddate('none', 'none', 'fr', null, 'd MMMM Y') }}#}
                    </td>

                    <td>{{ vac.firstName }} {{ vac.lastName }}</td>
                    <td>{{vac.vaccinName }} </td>

                    <td>
                        <span class="badge badge-success badge-style modif-etat" data-type="vaccination" data-id="{{ vac.id }}" data-vaccin="{{vac.vaccin }}" data-praticien="{{ vac.praticien }}" data-patient="{{ vac.patient }}"  data-date="{{ vac.datePrise |date}}"   data-etat="{{ vac.etat }}" data-action="active">Fait</span>
                        <span class="badge badge-danger badge-style modif-etat"  data-type="vaccination" data-id="{{ vac.id }}" data-vaccin="{{vac.vaccin }}" data-praticien="{{ vac.praticien }}" data-patient="{{ vac.patient }}"  data-date="{{ vac.datePrise  |date}}"   data-etat="{{ vac.etat }}" data-action="reject">Non Fait</span>
                    </td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    <!-- DataTables -->
    <script>
        $("#example1").DataTable({
            language: {
                url: "{{ asset('vendor/datatables/lang.json') }}"
            }
        });
        $('.modif-etat').on('click', function (e) {
            e.preventDefault();
            var id = $(this).data('id');
            var vaccin = $(this).data('vaccin');
            var type = $(this).data('type');
            var praticien = $(this).data('praticien');
            var patient = $(this).data('patient');
            var date = $(this).data('date');
            var etat = $(this).data('etat');
            var action = $(this).data('action');
            $.ajax({
                url: "{{ path('update_etat') }}",
                type: 'post',
                data: {
                    id: id,
                    vaccin: vaccin,
                    type: type,
                    praticien: praticien,
                    patient: patient,
                    date: date,
                    etat: etat,
                    action: action
                },
                dataType: "json",
                success: (data) =>{
                    $(".loadBody").css("display", "none");
                    location.reload();
                },
                error: (e) => {
                    $(".loadBody").css("display", "none");
                    $(".chargementError").css("display", "block");
                }
            }).done(() => {
                $(".loadBody").css("display", "none");
            });



        });

        $('.active_etat_rdv').on('click', function (e) {
            e.preventDefault();
            var id = $(this).data('id');
            var etat = $(this).data('etat');
            $.ajax({
                url: "{{ path('update_etat_rdv') }}",
                type: 'post',
                data: {
                    'id_rdv': id,
                    'etat': etat
                },
                dataType: "json",
                success: (data) =>{
                    if(data.status == 'OK' ){
                        location.reload();
                    }
                },
                error: (e) => {
                    console.log(e.statusText);
                }
            }).done(() => {

            });
        });

        $('.active_status_rdv').on('click', function (e) {
            e.preventDefault();
            var id = $(this).data('id');
            var status = $(this).data('status');

            $.ajax({
                url: "{{ path('update_status_rdv') }}",
                type: 'post',
                data: {
                    'id_rdv': id,
                    'status': status
                },
                dataType: "json",
                success: (data) =>{
                    if(data.status == 'OK' ){
                        location.reload();
                    }
                },
                error: (e) => {
                    console.log(e.statusText);
                }
            }).done(() => {

            });
        });
    </script>
{% endblock %}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/css/all.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('assets/css/mdb.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}" />
        <link rel="stylesheet" href="{{ asset('assets/css/component.css') }}" />
        <link href="{{ asset('vendor/fullcalendar/packages/core/main.css') }}" rel='stylesheet' />
        <link href="{{ asset('vendor/fullcalendar/packages/daygrid/main.css') }}" rel='stylesheet' />
        <link href="{{ asset('vendor/fullcalendar/packages/timegrid/main.css') }}" rel='stylesheet' />
        <link href="{{ asset('vendor/fullcalendar/packages/list/main.css') }}" rel='stylesheet' />
        <link rel="stylesheet" type="text/css" href="{{  asset('vendor/sweetalert2/toastr.scss') }}" />
        <link rel="stylesheet" type="text/css" href="{{  asset('vendor/sweetalert2/bootstrap-4.min.css') }}" />
        <link href="{{ asset('vendor/datapicker/datepicker3.css') }}" rel="stylesheet">
        <style>
            .modal-body {
                padding-left: 4rem !important;
                padding-right: 4rem !important;
            }
            th {
                 text-align: center !important;
            }
            td {
                text-align: center !important;
            }

        </style>
    {% endblock %}
</head>
<body>


<!-- Content -->

<div class="body-page">
    <div class="d-flex">
        <!--nav-->
        {% block nav %}
            {{ include('praticien/include/sidebar.html.twig') }}
        {% endblock %}
        <!--nav-->
        <div class="col_exc_2">
            <!---header-->
            {% block header %}
                {{ include('praticien/include/header.html.twig') }}
            {% endblock %}

            <!---header-->
            {% for message in app.flashes('error') %}
                <input type="hidden" id="notice_error" value="{{ message }}" />
            {% endfor %}
            {% for message in app.flashes('success') %}
                <input type="hidden" id="notice_success" value="{{ message }}" />
            {% endfor %}
            {% for message in app.flashes('warning') %}
                <input type="hidden" id="notice_warning" value="{{ message }}" />
            {% endfor %}
            <!-- Container -->
            <div class="modal inmodal" id="modal_create_body" role="dialog" aria-hidden="true">
                <div class="modal-dialog modal-notify modal-primary">
                    <div class="modal-content animated bounceInDown">
                        <div class="create_body"></div>
                    </div>
                </div>
            </div>

            <!-- Modal Photo profile -->
            <div class="modal inmodal" id="modal_create_profile" role="dialog" aria-hidden="true">
                <div class="modal-dialog modal-notify modal-primary">
                    <div class="modal-content animated bounceInDown">
                        test
                    </div>
                </div>
            </div>


            <div class="container-fluid">
                {% block body %}

                {% endblock %}
            </div>

            <!-- End Container  -->
            <footer>

            </footer>
        </div>
    </div>
</div>

<!-- End Content -->
<script src="{{ asset('assets/js/jquery-3.1.1.min.js') }}"></script>
<script src="{{ asset('assets/js/popper.min.js') }}"></script>
<script src="{{ asset('assets/js/mdb.min.js') }}"></script>
<script src="{{ asset('vendor/fullcalendar/packages/core/main.js') }}"></script>
<script src="{{ asset('vendor/fullcalendar/packages/interaction/main.js') }}"></script>
<script src="{{ asset('vendor/fullcalendar/packages/core/locales-all.js') }}"></script>
<script src="{{ asset('vendor/fullcalendar/packages/daygrid/main.js') }}"></script>
<script src="{{ asset('vendor/fullcalendar/packages/timegrid/main.js') }}"></script>
<script src="{{ asset('vendor/fullcalendar/packages/list/main.js') }}"></script>
<!-- SweetAlert2/scramble -->
<script type="text/javascript" src="{{ asset('vendor/sweetalert2/toastr.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('vendor/sweetalert2/sweetalert2.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('vendor/sweetalert2/toast.js') }}"></script>
<!-- Data picker -->
<script src="{{ asset('vendor/datapicker/bootstrap-datepicker.js') }}"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
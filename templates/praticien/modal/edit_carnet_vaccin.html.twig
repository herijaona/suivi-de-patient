<!--Header-->

<div class="modal-header text-center">
    <h4 class="modal-title white-text w-100 font-weight-bold py-2">Modification de carnet de vaccination</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true" class="white-text">&times;</span>
    </button>
</div>
<!--Content-->
{{ form_start(form, {'attr': {'action': path('edit_carnet_vaccination'), 'id': 'edit_carnet' }}) }}
<!--Body-->
<div class="modal-body">
    <div class="md-form">
        <input type="hidden"  class="date_rdv form-control" name="id" value="{{ eventData.id }}">
        <label for="form103" class="">Patient</label>
        {{ form_widget(form.patient, { 'attr' : { 'id':'form1', 'class': 'form-control', 'required': 'required', 'disabled': 'disabled'} })}}
    </div>
    <div class="md-form">
        <label for="form103" class="">Vaccin</label>
        {{ form_widget(form.vaccin, { 'attr' : { 'id':'form1', 'class': 'form-control', 'required': 'required', 'disabled': 'disabled'} })}}
    </div>
    <div class="md-form ">
        <input type="hidden"  class="date_rdv form-control" name="type" value="{{ eventData.type }}">
        <label class="active" for="form1">Date vaccination</label>
        {% if eventData.type == 'dti' %}
            <input type="date" id="carnet_date" class="date_rdv form-control" name="datePriseInitiale" value="{{ eventData.dateCarnet }}">
        {% else %}
            <input type="date" id="carnet_date" class="date_rdv form-control" name="rappelVaccin" value="{{ eventData.dateCarnet }}">
        {% endif %}
    </div>
    <div class="md-form mb-5">
        <label class="active" for="form1">Heure de vaccination</label>
        <input type="time" id="carnet_time" class="time_carnet form-control" name="time_carnet" value="{{ eventData.timeCarnet }}">
    </div>
</div>
{{ form_end(form) }}
<!--Footer-->
<div class="modal-footer justify-content-center">
    <button type="submit" class="btn btn-outline-primary waves-effect submit_edit_carnet">Enregistrer <i class="fas fa-paper-plane-o ml-1"></i></button>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('.submit_edit_carnet').on('click', function (e) {
            e.preventDefault();
            $('#edit_carnet').submit();
        });

        $(".date_rdv").datepicker({
            dateFormat: 'dd/MM/yyyy',
            autoclose: true,
            todayHighlight:'TRUE',
            startDate: '-0d',
        });

        $('.time_carnet').clockpicker({
            donetext: "valider",
            autoclose: true,
        });

    });
</script>

<!--Header-->

<div class="modal-header text-center">
    {% if new == true %}
        <h4 class="modal-title white-text w-100 font-weight-bold py-2">Nouveau Région</h4>
    {% else %}
        <h4 class="modal-title white-text w-100 font-weight-bold py-2">Modification Région</h4>
    {% endif %}
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true" class="white-text">&times;</span>
    </button>
</div>
<!--Content-->
{{ form_start(form, {'attr': {'action': path('register_region') }}) }}
<!--Body-->
<div class="modal-body">
    <div class="md-form">
        <label class="active" for="form1">Nom </label>
        {{ form_widget(form.nameRegion, {'attr': { 'class': 'form-control', 'required': 'required' }}) }}
    </div>
    <div class="md-form">
        <label class="active" for="form1">Pays </label>
        {{ form_widget(form.state, {'attr': { 'class': 'form-control chosen-select', 'required': 'required' }}) }}
    </div>

</div>
<div class="modal-footer justify-content-center">
    <button type="button" class="btn btn-outline-danger waves-effect" data-dismiss="modal" aria-label="Close"> <i class="fas fa-remove ml-1"></i> Annuler</button>
    <button type="submit" class="btn btn-outline-primary waves-effect submit_new_center_health"> <i class="fas fa-save ml-1"></i> Enregistrer</button>
</div>

{{ form_end(form) }}

<script type="text/javascript">
    $(document).ready(function () {
        $('.chosen-select').chosen({width: "100%"});
    });
</script>

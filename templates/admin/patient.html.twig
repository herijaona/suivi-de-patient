{% extends 'include/base.html.twig' %}

{% block title %}Patient{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block body %}


    <!-- Content -->

    <div class="row head-table col-md-12">
        <div class="grid-title-table col-md-9 mt-4">
            <h4 class="h4-content">{% trans %}List of patients{% endtrans %}</h4>
        </div>
        <div class="grid-edit-btn col-md-3 mt-3">
            <button class="btn btn-info">+ Add membres</button>
            <button class="btn btn-danger">{% trans %}+ Create patient{% endtrans %}</button>
        </div>
    </div>

    <div class="row-table table-content">
        <table class="table table-striped" id="patient">
            <thead>
            <tr>
                <th>{% trans %}Last name{% endtrans %} </th>
                <th>{% trans %}first name{% endtrans %} </th>
                <th>{% trans %}Phone{% endtrans %}</th>
                <th>E-mail</th>
                <th>{% trans %}Date of Birth{% endtrans %}</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for patient in patients %}
                <tr>
                    <td><a href="#">{{ patient.lastname }}</a></td>
                    <td>{{ patient.firstname }}</td>
                    <td>{{ patient.phone }}</td>
                    <td>{{ patient.user.email }}</td>

                    <td style="text-align: right">
                        <i class="fas fa-eye"></i>
                        <i class="fa fa-edit"></i>
                        <i class="fa fa-ellipsis-v"></i>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- End Content -->

{% endblock %}

{% block javascripts %}
    <!-- DataTables -->
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $('#patient').DataTable();
        });
    </script>
{% endblock %}
 
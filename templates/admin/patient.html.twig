{% extends 'admin/include/base.html.twig' %}

{% block title %}Patient{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('vendor/datatables-bs4/css/dataTables.bootstrap4.css')}}">
{% endblock %}
{% block body %}


    <!-- Content -->

    <div class="row head-table col-md-12">
        <div class="grid-title-table col-md-9 mt-4">
            <h4 class="h4-content">Liste des patients</h4>
        </div>
        <div class="grid-edit-btn col-md-3 mt-3">
            <button class="btn btn-info">+ Add membres</button>
            <button class="btn btn-danger">+ Creer patient</button>
        </div>
    </div>

    <div class="row-table table-content">
        <table class="table table-striped" id="patient">
            <thead>
            <tr>
                <th>Nom et prenom</th>
                <th>Telephone</th>
                <th>E-mail</th>
                <th>Date de naissance</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for patient in patients %}
                <tr>
                    <td><a href="#">{{ patient.lastname }}</a></td>
                    <td>{{ patient.firstname }}</td>
                    <td>{{ patient.user.email }}</td>
                    <td>{{ patient.dateborn|date("d/m/Y") }}</td>
                    <td>
                        <i class="fas fa-eye"></i>
                        <i class="fa fa-edit"></i>
                        <i class="fa fa-ellipsis-v"></i>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- End Content -->

{% endblock %}

{% block javascripts %}
    <!-- DataTables -->
    {{ parent() }}
    <script src="{{asset('vendor/datatables/jquery.dataTables.js')}}"></script>
    <script src="{{asset('vendor/datatables-bs4/js/dataTables.bootstrap4.js')}}"></script>
    <script>
        $("#patient").DataTable({
            language: {
                url: "{{ asset('vendor/datatables/lang.json') }}"
            }
        });
    </script>
{% endblock %}
 
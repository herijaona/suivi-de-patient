{% extends 'include/base.html.twig' %}
{%  block title %}
    Vaccins
{% endblock %}
{% block stylesheets %}
    <style>
        /*-------------------------*/
        .tab-wrap {
            margin: 10px;
            padding: 15px;
        }
        .tab-list {
            box-sizing: border-box;
            -webkit-box-sizing: border-box;
        }
        .tab-list:after {
            content: "";
            clear: both;
            display: table;
        }
        .tab-list li {
            float: left;
            margin-left: -1px;
            list-style: none;
        }
        .tab-list li a {
            display: block;
            height: 40px;
            line-height: 40px;
            text-decoration: none;
        }
        .tab-list li a span {
            display: flex;
            align-items: center;
            height: 40px;
            line-height: 40px;
            padding: 0 15px;
        }
        .tab-list li a:hover span {
            color: #333;
            background-color: #fff ;
        }
        .tab-list li.in span {
            color: #7d8688;
            background-color: #f3f3f3;
        }
        .tab-item {
            display: none;
            margin-top: 20px;
            padding: 15px;
        }
        .tab-item.in {
            display: block;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="row head-table col-md-12">
        <div class="grid-title-table col-md-9 mt-4">
            <h4 class="h4-content">Liste de tous les membres </h4>
        </div>
    </div>
    <div class="tab-wrap">
        <ul class="tab-list">
            <li class="in"><a href="javascript:;"><span>Patients</span></a></li>
            <li><a href="javascript:;"><span>Praticiens</span></a></li>
        </ul>
        <div class="tab-items">
            <div class="tab-item in">
                <div class="row-table table-content">
                    <table class="table table-striped" id="table-patients">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prénoms</th>
                            <th>Nom du mère</th>
                            <th>Téléphone</th>
                            <th>Date de consultation</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for patient in patients  %}
                            <tr>
                                <td>
                                    {{ patient.lastName }}
                                </td>
                                <td>
                                    {{ patient.firstName }}
                                </td>
                                <td>
                                    {{ patient.motherName }}
                                </td>
                                <td>
                                    {{ patient.phone }}
                                </td>
                                <td>
                                    {{ patient.user.username }}
                                </td>
                                <td>
                                    {% if patient.etat == 1 %}
                                        <span class="badge badge-success badge-style modif-status" data-id="{{ patient.id }}" data-etat="{{ patient.etat }}"> activé </span>
                                    {% else %}
                                        <span class="badge badge-warning badge-style modif-status" data-id="{{ patient.id }}" data-etat="{{ patient.etat }}">Desactivé</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="btn btn-primary data-edit" data-id="{{ patient.id }}"><i class="fa fa-pencil"></i></span>
                                    <span class="btn btn-danger data-remove" data-id="{{ patient.id }}"><i class="fa fa-trash-o"></i></span>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="tab-item">
                <div class="row-table table-content">
                    <table class="table table-striped" id="table-praticiens">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prénoms</th>
                            <th>Téléphone</th>
                            <th>Date de consultation</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for praticien in praticiens  %}
                            <tr>
                                <td>
                                    {{ praticien.lastName }}
                                </td>
                                <td>
                                    {{ praticien.firstName }}
                                </td>
                                <td>
                                    {{ praticien.phone }}
                                </td>
                                <td>
                                    {{ praticien.user.username }}
                                </td>
                                <td>
                                    {% if praticien.etat == 1 %}
                                        <span class="badge badge-success badge-style modif-status" data-id="{{ praticien.id }}" data-etat="{{ praticien.etat }}"> activé </span>
                                    {% else %}
                                        <span class="badge badge-warning badge-style modif-status" data-id="{{ praticien.id }}" data-etat="{{ praticien.etat }}">Desactivé</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="btn btn-primary data-edit" data-id="{{ praticien.id }}"><i class="fa fa-pencil"></i></span>
                                    <span class="btn btn-danger data-remove" data-id="{{ praticien.id }}"><i class="fa fa-trash-o"></i></span>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script>
        $(".new_vaccin").on('click' , function(e) {
            $(".loadBody").css("display", "block");
            e.preventDefault();
            $.ajax({
                url: "{{ path('add_form_vaccin') }}",
                type: 'post',
                data: {
                    action: 'new'
                },
                dataType: 'json',
                success: (data) => {
                    $('.create_body').html(data.form_html);
                    $("#modal_create_body").modal('show');
                    $(".loadBody").css("display", "none");
                },
                error: (e) => {
                    $(".loadBody").css("display", "none");
                    $(".chargementError").css("display", "block");
                }
            }).done(() => {
                $(".loadBody").css("display", "none");
            });
        });

        $('.data-edit').on('click', function (e) {
            e.preventDefault();
            var id = $(this).data('id');
            $.ajax({
                url: "{{ path('add_form_vaccin') }}",
                type: 'post',
                data: {
                    id_vaccin: id,
                    action: 'edit'
                },
                dataType: "json",
                success: (data) =>{
                    $('.create_body').html(data.form_html);
                    $("#modal_create_body").modal('show');
                    $(".loadBody").css("display", "none");
                },
                error: (e) => {
                    $(".loadBody").css("display", "none");
                    $(".chargementError").css("display", "block");
                }
            }).done(() => {
                $(".loadBody").css("display", "none");
            });
        });

        $('.data-remove').on('click', function (e) {
            e.preventDefault();
            var $delete = confirm('Êtes-vous sûr de vouloir supprimer cet événement ?');
            if($delete){
                $(".loadBody").css("display", "block");
                var id = $(this).data('id');
                $.ajax({
                    url: "{{ path('remove_vaccin') }}",
                    type: 'post',
                    data: {
                        id_vaccin: id
                    },
                    dataType: "json",
                    success: (data) =>{
                        $(".loadBody").css("display", "none");
                        location.reload();
                    },
                    error: (e) => {
                        $(".loadBody").css("display", "none");
                        $(".chargementError").css("display", "block");
                    }
                }).done(() => {
                    $(".loadBody").css("display", "none");
                });
            }else {
                return false
            }
        });

        $('.modif-status').on('click', function (e) {
            e.preventDefault();
            $(".loadBody").css("display", "block");
            var id = $(this).data('id');
            var status = $(this).data('etat');
            $.ajax({
                url: "{{ path('edit_status_vaccin') }}",
                type: 'post',
                data: {
                    id_vaccin: id,
                    status: status
                },
                dataType: "json",
                success: (data) =>{
                    $(".loadBody").css("display", "none");
                    location.reload();
                },
                error: (e) => {
                    $(".loadBody").css("display", "none");
                    $(".chargementError").css("display", "block");
                }
            }).done(() => {
                $(".loadBody").css("display", "none");
            });
        });

        $(document).on('click', '.tab-list li a', function() {
            var $this = $(this),
                $tabList = $this.parents('ul'),
                _idx = $this.closest('li').index();
            $tabList.children().eq(_idx).addClass('in').siblings().removeClass('in');
            $tabList.next().children().eq(_idx).addClass('in').siblings().removeClass('in');
        });

        $(document).ready(function () {
            $("#table-patients").DataTable({
                language: {
                    url: "{{ asset('vendor/datatables/lang.json') }}"
                }
            });
            $("#table-praticiens").DataTable({
                language: {
                    url: "{{ asset('vendor/datatables/lang.json') }}"
                }
            });
            //$('.mdb-select').materialSelect();
        });

    </script>
{% endblock %}
{% extends 'include/base.html.twig' %}
{%  block title %}
    Consultation
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row head-table col-md-12">
        <div class="grid-title-table col-md-9 mt-4">
            <h4 class="h4-content">{% trans %}All consultations{% endtrans %}</h4>
        </div>
    </div>
    <div class="row-table table-content">
        <table class="table table-striped" id="example1">
            <thead>
            <tr>
                <th>{% trans %}Consultation date{% endtrans %}</th>
                <th>{% trans %}Object of consultation{% endtrans %} </th>
                <th>Patient</th>
                <th>Praticien</th>
                <th>Validation</th>
                <th>Status</th>
                {# <th>More</th> #}
            </tr>
            </thead>
            <tbody>
            {% for rdv in consultations  %}
                <tr>
                    <td>
                        {{ rdv.dateRdv|localizeddate('none', 'none', app.request.locale, null, 'dd MMMM yyyy') }}
                    </td>
                    <td>
                        {% if rdv.objetConsultation is defined and rdv.objetConsultation is not null %}{{ rdv.objetConsultation }}{% endif %}
                    </td>
                    <td>
                        {{ rdv.patient.lastName ~' '~ rdv.patient.firstName }} <br>
                    </td>
                    <td>
                        {% if rdv.ordonnance is defined and rdv.ordonnance is not null %} {{ rdv.ordonnance.praticien.lastName ~' '~ rdv.ordonnance.praticien.firstName }} {% endif %} <br>
                    </td>
                    <td style="text-align: center">
                        {% if rdv.statusConsultation == 1 %}
                            <span class="badge badge-success badge-style ">{% trans %}Validate{% endtrans %}</span>
                        {% elseif rdv.statusConsultation == 0 %}
                            <span class="badge badge-warning badge-style ">{% trans %}waiting{% endtrans %}</span>
                        {% elseif rdv.statusConsultation == 2 %}
                            <span class="badge badge-danger badge-style ">{% trans %}Reject{% endtrans %}</span>
                        {% endif %}

                    </td>
                    <td style="text-align: center">
                        {% if rdv.etat == 0 %}
                            <button class="btn btn-deep-orange  validation_width" >{% trans %}Not Done{% endtrans %}</button>
                        {% else %}
                            <button class="btn btn-primary validation_width" >{% trans %}Done{% endtrans %}</button>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('#example1').DataTable();
        });
    </script>
{% endblock %}
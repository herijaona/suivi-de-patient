{% extends 'include/base.html.twig' %}
{%  block title %}
    Vaccination
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row head-table col-md-12">
        <div class="grid-title-table col-md-9 mt-4">
            <h4 class="h4-content">{% trans %}All vaccinations{% endtrans %}</h4>
        </div>
    </div>
    <div class="row-table table-content">
        <table class="table table-striped" id="example1">
            <thead>
            <tr>
                <th>{% trans %}Vaccination date{% endtrans %}</th>
                <th>{% trans %}Detail{% endtrans %}</th>
                <th>{% trans %}Patient{% endtrans %}</th>
                <th>{% trans %}Praticien{% endtrans %}</th>
                <th>{% trans %}Validation{% endtrans %}</th>
                <th>{% trans %}Status{% endtrans %}</th>
                {# <th>More</th> #}
            </tr>
            </thead>
            <tbody>
            {% for rdv in Vaccinations  %}
                <tr>
                    <td>
                        {{ rdv.datePrise|localizeddate('none', 'none', app.request.locale, null, 'dd MMMM yyyy') }}
                    </td>
                    <td>
                        {% if rdv.vaccin is defined and rdv.vaccin.vaccinName is not null %}{{ rdv.vaccin.vaccinName }}{% endif %}
                    </td>
                    <td>
                        {{ rdv.patient.lastName ~' '~ rdv.patient.firstName }} <br>
                    </td>
                    <td>
                       {% if rdv.ordonnance is defined and rdv.ordonnance is not null %} {{ rdv.ordonnance.praticien.lastName ~' '~ rdv.ordonnance.praticien.firstName }} {% endif %} <br>
                    </td>
                    <td>
                        {% if rdv.statusVaccin == 0 %}
                            <button class="btn btn-info validation_width" >{% trans %}waiting{% endtrans %}</button>
                        {% elseif rdv.statusVaccin == 1 %}
                            <button class="btn btn-primary validation_width" >{% trans %}Validate{% endtrans %}</button>
                        {% else %}
                            <button class="btn btn-danger validation_width" >{% trans %}Reject{% endtrans %}</button>
                        {% endif %}
                    </td>
                    <td>
                        {% if rdv.etat == 0 %}
                            <button class="btn btn-deep-orange  validation_width" >{% trans %}Not Done{% endtrans %}</button>
                        {% else %}
                            <button class="btn btn-primary validation_width" >{% trans %}Done{% endtrans %}</button>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $("#example1").DataTable({
            language: {
                url: "{{ asset('vendor/datatables/lang.json') }}"
            }
        });

        $('.active_etat_rdv').on('click', function (e) {
            $(".loadBody").css("display", "block");
            e.preventDefault();
            var id = $(this).data('id');
            var etat = $(this).data('etat');
            $.ajax({
                url: "{{ path('update_etat_rdv') }}",
                type: 'post',
                data: {
                    'id_rdv': id,
                    'etat': etat
                },
                dataType: "json",
                success: (data) =>{
                    $(".loadBody").css("display", "none");
                    if(data.status == 'OK' ){
                        location.reload();
                    }
                },
                error: (e) => {
                    $(".loadBody").css("display", "none");
                    console.log(e.statusText);
                }
            }).done(() => {

            });
        });

        $('.active_status_rdv').on('click', function (e) {
            e.preventDefault();
            $(".loadBody").css("display", "block");
            var id = $(this).data('id');
            var status = $(this).data('status');

            $.ajax({
                url: "{{ path('update_status_rdv') }}",
                type: 'post',
                data: {
                    'id_rdv': id,
                    'status': status
                },
                dataType: "json",
                success: (data) =>{
                    $(".loadBody").css("display", "none");
                    if(data.status == 'OK' ){
                        location.reload();
                    }
                },
                error: (e) => {
                    $(".loadBody").css("display", "none");
                    console.log(e.statusText);
                }
            }).done(() => {

            });
        });
    </script>
{% endblock %}
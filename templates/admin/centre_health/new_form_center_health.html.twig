<!--Header-->

<div class="modal-header text-center">
    {% if new == true %}
        <h4 class="modal-title white-text w-100 font-weight-bold py-2">Nouveau Centre de santé</h4>
    {% else %}
        <h4 class="modal-title white-text w-100 font-weight-bold py-2">Modification Centre de santé</h4>
    {% endif %}
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true" class="white-text">&times;</span>
    </button>
</div>
<!--Content-->
{{ form_start(form, {'attr': {'action': path('register_center_health'), 'id': 'new_center_health' }}) }}
<!--Body-->
<div class="modal-body">
    <div class="md-form">
        <label class="active" for="form1">Nom </label>
        {{ form_widget(form.centreName, {'attr': { 'class': 'form-control' }}) }}
    </div>
    <div class="md-form">
        <label class="active" for="form1">Téléphone </label>
        {{ form_widget(form.centrePhone, {'attr': {  'class': 'form-control' }}) }}
    </div>
    <div class="md-form">
        <label class="active" for="form1">Résponsable</label>
        {{ form_widget(form.responsableCentre, {'attr': {  'class': 'form-control' }}) }}
    </div>
    <div class="md-form">
        <label for="form103" class="">Type de centre</label>
        {{ form_widget(form.centretype, {'attr': { 'class': 'form-control chosen-select' }}) }}
    </div>
{#<div class="md-form">
    <label for="form103" class="">Pays</label>
    {{ form_widget(form.pays, {'attr': { 'id':'form1', 'class': 'form-control  chosen-select' }}) }}
</div>
<div class="md-form">
    <label for="form103" class="">Région</label>
    {{ form_widget(form.region, {'attr': { 'class': 'form-control  chosen-select' }}) }}
</div>#}
<div class="md-form">
    <label for="form103" class="">Ville</label>
    {{ form_widget(form.ville, {'attr': { 'class': 'form-control  chosen-select' }}) }}
</div>
<div class="md-form">
    <label for="form103" class="">Numéro de Rue</label>
    {{ form_widget(form.numRue, {'attr': { 'class': 'form-control' }}) }}
</div>
<div class="md-form">
    <label for="form103" class="">Quartier</label>
    {{ form_widget(form.quartier, {'attr': { 'class': 'form-control' }}) }}
</div>
</div>
<div class="modal-footer justify-content-center">
    <button type="button" class="btn btn-outline-danger waves-effect" data-dismiss="modal" aria-label="Close">Annuler <i class="fas fa-paper-plane-o ml-1"></i></button>
    <button type="submit" class="btn btn-outline-primary waves-effect submit_new_center_health">Enregistrer <i class="fas fa-paper-plane-o ml-1"></i></button>
</div>
{{ form_end(form) }}


<script type="text/javascript">
$(document).ready(function () {
    $('.chosen-select').chosen({width: "100%"});
});
</script>

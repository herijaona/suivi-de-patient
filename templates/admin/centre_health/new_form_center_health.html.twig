<!--Header-->

<div class="modal-header text-center">
    {% if new == true %}
        <h4 class="modal-title white-text w-100 font-weight-bold py-2">{% trans %}New health center{% endtrans %}</h4>
    {% else %}
        <h4 class="modal-title white-text w-100 font-weight-bold py-2">{% trans %}Modification of the health center{% endtrans %}</h4>
    {% endif %}
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true" class="white-text">&times;</span>
    </button>
</div>
<!--Content-->
{{ form_start(form, {'attr': {'action': path('register_center_health'), 'id': 'new_center_health' }}) }}
<!--Body-->
<div class="modal-body">
    <div class="md-form">
        <label class="active" for="form1">{% trans %}Name{% endtrans %}</label>
        {{ form_widget(form.centreName, {'attr': { 'class': 'form-control' }}) }}
    </div>
    <div class="md-form">
        <label class="active" for="form1">{% trans %}Phone{% endtrans %}</label>
        {{ form_widget(form.centrePhone, {'attr': {  'class': 'form-control' }}) }}
    </div>
    <div class="md-form">
        <label class="active" for="form1">{% trans %}in charge of{% endtrans %}</label>
        {{ form_widget(form.responsableCentre, {'attr': {  'class': 'form-control' }}) }}
    </div>
    <div class="md-form">
        <label for="form103" class="">{% trans %}Center type{% endtrans %}</label>
        {{ form_widget(form.centretype, {'attr': { 'class': 'form-control chosen-select' }}) }}
    </div>

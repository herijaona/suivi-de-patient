    <label for="form103" class="">Pays</label>
    {{ form_widget(form.pays, {'attr': { 'id':'form1', 'class': 'form-control  chosen-select' }}) }}
</div>
<div class="md-form">
    <label for="form103" class="">RÃ©gion</label>
    {{ form_widget(form.region, {'attr': { 'class': 'form-control  chosen-select' }}) }}
</div>#}
<div class="md-form">
    <label for="form103" class="">{% trans %}City{% endtrans %}</label>
    {{ form_widget(form.ville, {'attr': { 'class': 'form-control  chosen-select' }}) }}
</div>
<div class="md-form">
    <label for="form103" class="">{% trans %}Street number{% endtrans %}</label>
    {{ form_widget(form.numRue, {'attr': { 'class': 'form-control' }}) }}
</div>
<div class="md-form">
    <label for="form103" class="">{% trans %}District{% endtrans %}</label>
    {{ form_widget(form.quartier, {'attr': { 'class': 'form-control' }}) }}
</div>
</div>
<div class="modal-footer justify-content-center">
    <button type="button" class="btn btn-outline-danger waves-effect" data-dismiss="modal" aria-label="Close"><i class="fas fa-remove ml-1"></i> {% trans %}Cancel{% endtrans %}  </button>
    <button type="submit" class="btn btn-outline-primary waves-effect submit_new_center_health"><i class="fas fa-save ml-1"></i> {% trans %}Save{% endtrans %}</button>
</div>
{{ form_end(form) }}



{% extends 'base.html.twig' %}
{% block title %}Email{% endblock %}
{% block body %}


    <form action="{{path('update_password')}}" method="post">
        <div class="background-img"></div>
        <div class="col-md-8 " style="margin-top: 247px; border: 4px solid #f0f0f0;margin-left: 292px; background-color: #f0f0f0 ">
            <p style=" font-weight: bold; font-size: 20px; margin-left: 15px; text-align: center; ">REINITIALISATION DE VOTRE MOT DE PASSE</p>
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            <hr>
            <div style="margin-top: 18px; margin-left: 273px;" class="form-group row">
                <div class="col-md-4">
                    <input placeholder="votre e-mail" type="email" id="email" name="email"  style=" width: 335px; padding: 15px;margin-left: -184px; color: black;" required >
                </div>
                <button type="submit" class="btn btn-success " style="width: 336px; margin-left: 5px; padding: 15px;color: #0d0d0d; font-weight: bold"><i class="fas fa-save ml-1"></i> {% trans %}VALIDATE{% endtrans %} </button>
            </div>
        </div>

    </form>

{% endblock %}







{% extends 'base.html.twig' %}

{% block title %}LogIn{% endblock %}

{% block body %}
<form method="post">

<div class="background-img"></div>
<div class="body-page">
    <div class="container text-center body-content">
        <img class="logo-login" width="88px" src="{{asset('assets/images/logo_suivi.png')}}" alt="logo" id="logo">
        <h3 class="main-title">Se connecter</h3>
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form role="form" class="form-horizontal">
            <div class="form-group">
                <label for="input-id">
                    Identifiant
                </label>
                <input id="input-id" type='text' name="username" value="{{ last_username }}" class="form-control">
            </div>
            <div class="form-group">
                <label for="input-id">
                    Mot de passe
                </label>
                <input id="input-id" type='password' name="password" class="form-control">
            </div>
            <div class="form-group">
                <label for="input-id">
                    Roles
                </label>
                <select id="input-id" name="roles" class="form-control">
                    <option value="ROLE_PATIENT">PATIENT</option>
                    <option value="ROLE_PRATICIEN">PRATICIEN</option>
                </select>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button type="submit" class="btn btn-info button-login">
                Se connecter
            </button>
            <div class="form-check ml-3">
                <div>
                    <div class="checkbox-container">
                        <label class="checkbox-label">
                                <input type="checkbox">
                                <span class="checkbox-custom rectangular"></span>
                            </label>
                        <div class="input-title">rester connecter</div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
   
</form>
<!-- Footer -->

<footer class="footer">
    <div class="container mention-legal mt-5">
        Copyright Â© 2020 Olivier RTs
    </div>
</footer>
{% endblock %}






                    </label>
                    {{ form_widget(activationForm.code, {'attr': {'class': 'form-control', 'placeholder': 'code activation'}}) }}
                </div>
                <button type="submit" class="btn btn-info button-login">
                    Valider
                </button>
            {{ form_end(activationForm) }}
